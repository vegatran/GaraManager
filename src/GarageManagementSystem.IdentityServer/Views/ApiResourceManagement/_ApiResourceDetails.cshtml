@model dynamic

<div class="row">
    <div class="col-md-6">
        <h6 class="font-weight-bold text-primary">Basic Information</h6>
        <table class="table table-sm table-borderless">
            <tr>
                <td class="text-muted">Name:</td>
                <td><strong>@Model.Name</strong></td>
            </tr>
            <tr>
                <td class="text-muted">Display Name:</td>
                <td>@(Model.DisplayName ?? "N/A")</td>
            </tr>
            <tr>
                <td class="text-muted">Description:</td>
                <td>@(Model.Description ?? "N/A")</td>
            </tr>
            <tr>
                <td class="text-muted">Enabled:</td>
                <td>
                    @if (Model.Enabled)
                    {
                        <span class="badge badge-success">Enabled</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Disabled</span>
                    }
                </td>
            </tr>
            <tr>
                <td class="text-muted">Show in Discovery:</td>
                <td>
                    @if (Model.ShowInDiscoveryDocument)
                    {
                        <span class="badge badge-info">Yes</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">No</span>
                    }
                </td>
            </tr>
        </table>
    </div>
    
    <div class="col-md-6">
        <h6 class="font-weight-bold text-primary">User Claims</h6>
        @if (Model.UserClaims != null && Model.UserClaims.Count > 0)
        {
            <div class="mb-2">
                @foreach (var claim in Model.UserClaims)
                {
                    <span class="badge badge-primary mr-1">@claim</span>
                }
            </div>
        }
        else
        {
            <span class="text-muted">None</span>
        }
        
        <h6 class="font-weight-bold text-primary mt-3">API Scopes</h6>
        @if (Model.Scopes != null && Model.Scopes.Count > 0)
        {
            <div class="mb-2">
                @foreach (var scope in Model.Scopes)
                {
                    <span class="badge badge-info mr-1">@scope</span>
                }
            </div>
        }
        else
        {
            <span class="text-muted">None</span>
        }
    </div>
</div>

<div class="row mt-3">
    <div class="col-12">
        <h6 class="font-weight-bold text-primary">Secrets</h6>
        @if (Model.Secrets != null && Model.Secrets.Count > 0)
        {
            <div class="alert alert-info">
                <small>
                    <strong>Note:</strong> Secrets are hashed and cannot be displayed. 
                    There are @Model.Secrets.Count secret(s) configured for this API Resource.
                </small>
            </div>
        }
        else
        {
            <span class="text-muted">No secrets configured</span>
        }
    </div>
</div>
