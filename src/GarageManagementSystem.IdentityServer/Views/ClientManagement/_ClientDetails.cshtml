@model dynamic

<div class="row">
    <div class="col-md-6">
        <h6 class="font-weight-bold text-primary">Basic Information</h6>
        <table class="table table-sm table-borderless">
            <tr>
                <td class="text-muted">Client ID:</td>
                <td><strong>@Model.ClientId</strong></td>
            </tr>
            <tr>
                <td class="text-muted">Client Name:</td>
                <td><strong>@Model.ClientName</strong></td>
            </tr>
            <tr>
                <td class="text-muted">Description:</td>
                <td>@(Model.Description ?? "N/A")</td>
            </tr>
            <tr>
                <td class="text-muted">Enabled:</td>
                <td>
                    @if (Model.Enabled)
                    {
                        <span class="badge badge-success">Enabled</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Disabled</span>
                    }
                </td>
            </tr>
        </table>
    </div>
    
    <div class="col-md-6">
        <h6 class="font-weight-bold text-primary">Security Settings</h6>
        <table class="table table-sm table-borderless">
            <tr>
                <td class="text-muted">Require Client Secret:</td>
                <td>
                    @if (Model.RequireClientSecret)
                    {
                        <span class="badge badge-warning">Yes</span>
                    }
                    else
                    {
                        <span class="badge badge-info">No</span>
                    }
                </td>
            </tr>
            <tr>
                <td class="text-muted">Require PKCE:</td>
                <td>
                    @if (Model.RequirePkce)
                    {
                        <span class="badge badge-warning">Yes</span>
                    }
                    else
                    {
                        <span class="badge badge-info">No</span>
                    }
                </td>
            </tr>
            <tr>
                <td class="text-muted">Allow Offline Access:</td>
                <td>
                    @if (Model.AllowOfflineAccess)
                    {
                        <span class="badge badge-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">No</span>
                    }
                </td>
            </tr>
            <tr>
                <td class="text-muted">Require Consent:</td>
                <td>
                    @if (Model.RequireConsent)
                    {
                        <span class="badge badge-warning">Yes</span>
                    }
                    else
                    {
                        <span class="badge badge-info">No</span>
                    }
                </td>
            </tr>
        </table>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-6">
        <h6 class="font-weight-bold text-primary">Token Lifetimes</h6>
        <table class="table table-sm table-borderless">
            <tr>
                <td class="text-muted">Access Token Lifetime:</td>
                <td>@Model.AccessTokenLifetime seconds</td>
            </tr>
            <tr>
                <td class="text-muted">Identity Token Lifetime:</td>
                <td>@Model.IdentityTokenLifetime seconds</td>
            </tr>
            <tr>
                <td class="text-muted">Authorization Code Lifetime:</td>
                <td>@Model.AuthorizationCodeLifetime seconds</td>
            </tr>
            <tr>
                <td class="text-muted">User SSO Lifetime:</td>
                <td>@Model.UserSsoLifetime seconds</td>
            </tr>
        </table>
    </div>
    
    <div class="col-md-6">
        <h6 class="font-weight-bold text-primary">Grant Types</h6>
        @if (Model.GrantTypes != null && Model.GrantTypes.Count > 0)
        {
            <div class="mb-2">
                @foreach (var grantType in Model.GrantTypes)
                {
                    <span class="badge badge-primary mr-1">@grantType</span>
                }
            </div>
        }
        else
        {
            <span class="text-muted">None</span>
        }
        
        <h6 class="font-weight-bold text-primary mt-3">Allowed Scopes</h6>
        @if (Model.Scopes != null && Model.Scopes.Count > 0)
        {
            <div class="mb-2">
                @foreach (var scope in Model.Scopes)
                {
                    <span class="badge badge-info mr-1">@scope</span>
                }
            </div>
        }
        else
        {
            <span class="text-muted">None</span>
        }
    </div>
</div>

<div class="row mt-3">
    <div class="col-12">
        <h6 class="font-weight-bold text-primary">Redirect URIs</h6>
        @if (Model.RedirectUris != null && Model.RedirectUris.Count > 0)
        {
            <ul class="list-unstyled">
                @foreach (var uri in Model.RedirectUris)
                {
                    <li><code>@uri</code></li>
                }
            </ul>
        }
        else
        {
            <span class="text-muted">None</span>
        }
        
        <h6 class="font-weight-bold text-primary mt-3">Post Logout Redirect URIs</h6>
        @if (Model.PostLogoutRedirectUris != null && Model.PostLogoutRedirectUris.Count > 0)
        {
            <ul class="list-unstyled">
                @foreach (var uri in Model.PostLogoutRedirectUris)
                {
                    <li><code>@uri</code></li>
                }
            </ul>
        }
        else
        {
            <span class="text-muted">None</span>
        }
        
        <h6 class="font-weight-bold text-primary mt-3">CORS Origins</h6>
        @if (Model.CorsOrigins != null && Model.CorsOrigins.Count > 0)
        {
            <ul class="list-unstyled">
                @foreach (var origin in Model.CorsOrigins)
                {
                    <li><code>@origin</code></li>
                }
            </ul>
        }
        else
        {
            <span class="text-muted">None</span>
        }
        
        <h6 class="font-weight-bold text-primary mt-3">Client Claims</h6>
        @if (Model.ClientClaims != null && Model.ClientClaims.Count > 0)
        {
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.ClientClaims)
                    {
                        <tr>
                            <td><code>@claim.Type</code></td>
                            <td>@claim.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <span class="text-muted">None</span>
        }
    </div>
</div>