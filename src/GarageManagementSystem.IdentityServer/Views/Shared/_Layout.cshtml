<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Identity Server Management</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="~/lib/adminlte/css/adminlte.min.css">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap4.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-user"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-user mr-2"></i> Profile
                            </a>
                            <div class="dropdown-divider"></div>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt mr-2"></i> Logout
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="dropdown-item">
                                <i class="fas fa-sign-in-alt mr-2"></i> Login
                            </a>
                        }
                    </div>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index", "Home")" class="brand-link">
                <img src="~/lib/adminlte/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Identity Server</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/lib/adminlte/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="#" class="d-block">@User.Identity.Name</a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="d-block">Login</a>
                        }
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="UserManagement" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>User Management</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="ClientManagement" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-desktop"></i>
                                <p>Client Management</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="ApiResourceManagement" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-server"></i>
                                <p>API Resources</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="ClaimsManagement" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-tags"></i>
                                <p>Claims Management</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="ApiScopeManagement" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-key"></i>
                                <p>API Scope Management</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="IdentityResourceManagement" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-id-card"></i>
                                <p>Identity Resource Management</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="CacheManagement" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-memory"></i>
                                <p>Cache Management</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <!-- Content Header -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>@ViewData["Title"]</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                                <li class="breadcrumb-item active">@ViewData["Title"]</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2024 <a href="#">Identity Server Management</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.0.0
            </div>
        </footer>
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/lib/adminlte/js/adminlte.min.js"></script>
    <!-- DataTables -->
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <!-- Select2 -->
    <script src="~/lib/select2/dist/js/select2.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <!-- Chart.js -->
    <script src="~/lib/chart.js/dist/chart.umd.min.js"></script>
    <!-- Core Utilities (load first) -->
    <script src="~/js/modal-select2.js" asp-append-version="true"></script>
    <script src="~/js/ajax-utility.js" asp-append-version="true"></script>
    <script src="~/js/datatables-utility.js" asp-append-version="true"></script>
    <!-- Site Utilities -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>