@model GarageManagementSystem.IdentityServer.Controllers.CreateRoleViewModel
@Html.AntiForgeryToken()

<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="createName">Role Name</label>
                <input type="text" class="form-control" id="createName" name="Name" required>
            </div>
            <div class="form-group">
                <label for="createDescription">Description</label>
                <textarea class="form-control" id="createDescription" name="Description" rows="3"></textarea>
            </div>
                            <div class="form-group">
                                <div class="custom-control custom-switch">
                                    <input type="checkbox" class="custom-control-input" id="createIsActive" name="IsActive" value="true" checked>
                                    <input type="hidden" name="IsActive" value="false" />
                                    <label class="custom-control-label" for="createIsActive">Active</label>
                                </div>
                            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-primary">Create Role</button>
</div>
