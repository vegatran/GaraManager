@model GarageManagementSystem.IdentityServer.Controllers.EditUserViewModel

@Html.AntiForgeryToken()
<input type="hidden" name="Id" value="@Model.Id" />

<div class="row">
    <div class="col-md-6">
        <h6 class="font-weight-bold text-primary">Basic Information</h6>
        <div class="form-group">
            <label for="editEmail">Email <span class="text-danger">*</span></label>
            <input type="email" class="form-control form-control-sm" id="editEmail" name="Email" required 
                   value="@Model.Email" readonly>
            <small class="form-text text-muted">Email cannot be changed</small>
        </div>
        <div class="form-group">
            <label for="editFirstName">First Name <span class="text-danger">*</span></label>
            <input type="text" class="form-control form-control-sm" id="editFirstName" name="FirstName" required 
                   value="@Model.FirstName">
        </div>
    </div>
    
    <div class="col-md-6">
        <h6 class="font-weight-bold text-primary">Account Settings</h6>
        <div class="form-group">
            <label for="editLastName">Last Name <span class="text-danger">*</span></label>
            <input type="text" class="form-control form-control-sm" id="editLastName" name="LastName" required 
                   value="@Model.LastName">
        </div>
        <div class="form-group">
            <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="editIsActive" name="IsActive" 
                       @(Model.IsActive ? "checked" : "")>
                <label class="custom-control-label" for="editIsActive">Active</label>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12">
        <h6 class="font-weight-bold text-primary">Roles</h6>
        <div class="form-group">
            <label for="editRoles">User Roles</label>
            <select id="editRoles" name="Roles" class="form-control form-control-sm select2" multiple
                    data-selected-values="@string.Join(",", Model.Roles)">
                <option value="SuperAdmin">Super Admin</option>
                <option value="Admin">Admin</option>
                <option value="Manager">Manager</option>
                <option value="Technician">Technician</option>
                <option value="Receptionist">Receptionist</option>
                <option value="Employee">Employee</option>
                <option value="Customer">Customer</option>
                <option value="DemoUser">Demo User</option>
            </select>
            <small class="form-text text-muted">Select roles for this user</small>
        </div>
    </div>
</div>
