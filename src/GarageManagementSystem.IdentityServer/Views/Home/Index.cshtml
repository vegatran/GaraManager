@{
    ViewData["Title"] = "Dashboard";
}

<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
                <h3 id="totalUsers">0</h3>
                <p>Total Users</p>
            </div>
            <div class="icon">
                <i class="fas fa-users"></i>
            </div>
            <a asp-controller="UserManagement" asp-action="Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3 id="totalClients">0</h3>
                <p>Total Clients</p>
            </div>
            <div class="icon">
                <i class="fas fa-desktop"></i>
            </div>
            <a asp-controller="ClientManagement" asp-action="Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
            <div class="inner">
                <h3 id="totalResources">0</h3>
                <p>API Resources</p>
            </div>
            <div class="icon">
                <i class="fas fa-server"></i>
            </div>
            <a asp-controller="ApiResourceManagement" asp-action="Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3 id="totalScopes">0</h3>
                <p>API Scopes</p>
            </div>
            <div class="icon">
                <i class="fas fa-layer-group"></i>
            </div>
            <a asp-controller="ApiScopeManagement" asp-action="Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <!-- ./col -->
</div>
<!-- /.row -->

<!-- Main row -->
<div class="row">
    <!-- Left col -->
    <section class="col-lg-7 connectedSortable">
        <!-- Custom tabs (Charts with tabs)-->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-chart-pie mr-1"></i>
                    Token Usage Statistics
                </h3>
            </div><!-- /.card-header -->
            <div class="card-body">
                <div class="tab-content p-0">
                    <!-- Morris chart - Sales -->
                    <div class="chart tab-pane active" id="revenue-chart" style="position: relative; height: 300px;">
                        <canvas id="tokenUsageChart"></canvas>
                    </div>
                </div>
            </div><!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.Left col -->
    <!-- right col (We are only adding the ID to make the widgets sortable)-->
    <section class="col-lg-5 connectedSortable">
        <!-- Map card -->
        <div class="card bg-gradient-primary">
            <div class="card-header border-0">
                <h3 class="card-title">
                    <i class="fas fa-map-marker-alt mr-1"></i>
                    Quick Actions
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <a asp-controller="UserManagement" asp-action="Create" class="btn btn-light btn-block mb-2">
                            <i class="fas fa-user-plus"></i> Add User
                        </a>
                        <a asp-controller="ClientManagement" asp-action="Create" class="btn btn-light btn-block mb-2">
                            <i class="fas fa-desktop"></i> Add Client
                        </a>
                    </div>
                    <div class="col-6">
                        <a asp-controller="ApiResourceManagement" asp-action="Create" class="btn btn-light btn-block mb-2">
                            <i class="fas fa-server"></i> Add API Resource
                        </a>
                        <a asp-controller="ApiScopeManagement" asp-action="Create" class="btn btn-light btn-block mb-2">
                            <i class="fas fa-layer-group"></i> Add API Scope
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card -->

        <!-- solid sales graph -->
        <div class="card bg-gradient-info">
            <div class="card-header border-0">
                <h3 class="card-title">
                    <i class="fas fa-th mr-1"></i>
                    System Status
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="info-box mb-3">
                            <span class="info-box-icon bg-success elevation-1"><i class="fas fa-check"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Identity Server</span>
                                <span class="info-box-number">Running</span>
                            </div>
                        </div>
                        <div class="info-box mb-3">
                            <span class="info-box-icon bg-success elevation-1"><i class="fas fa-database"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Database</span>
                                <span class="info-box-number">Connected</span>
                            </div>
                        </div>
                        <div class="info-box mb-3">
                            <span class="info-box-icon bg-success elevation-1"><i class="fas fa-shield-alt"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Security</span>
                                <span class="info-box-number">Active</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card -->
    </section>
    <!-- right col -->
</div>
<!-- /.row (main row) -->

<div class="row">
    <section class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-cogs mr-1"></i>
                    Demo Data Management
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> 
                            <strong>Demo data đã được khởi tạo!</strong><br>
                            Bạn có thể sử dụng các tài khoản demo bên dưới để đăng nhập.
                        </div>
                        <div class="mt-3">
                            <h6><i class="fas fa-users"></i> Demo Accounts:</h6>
                            <small class="text-muted">
                                <strong>Super Admin:</strong> superadmin@demo.com / SuperAdmin@123<br>
                                <strong>Admin:</strong> admin@demo.com / Admin@123<br>
                                <strong>Manager:</strong> manager@demo.com / Manager@123<br>
                                <strong>Technician:</strong> technician@demo.com / Tech@123<br>
                                <strong>Reception:</strong> reception@demo.com / Reception@123<br>
                                <strong>Customer:</strong> customer@demo.com / Customer@123<br>
                                <strong>Demo:</strong> demo@demo.com / Demo@123
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
<script>
$(document).ready(function() {
    // Load dashboard statistics
    loadDashboardStats();
    
    // Initialize token usage chart
    initTokenUsageChart();
});

function loadDashboardStats() {
    // Simulate loading statistics
    // In real implementation, these would be loaded via AJAX
    $('#totalUsers').text('7');
    $('#totalClients').text('4');
    $('#totalResources').text('2');
    $('#totalScopes').text('4');
}

function initTokenUsageChart() {
    const ctx = document.getElementById('tokenUsageChart').getContext('2d');
    new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Access Tokens', 'Identity Tokens', 'Refresh Tokens', 'Authorization Codes'],
            datasets: [{
                data: [45, 25, 20, 10],
                backgroundColor: [
                    '#007bff',
                    '#28a745',
                    '#ffc107',
                    '#dc3545'
                ],
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });
}
</script>
}