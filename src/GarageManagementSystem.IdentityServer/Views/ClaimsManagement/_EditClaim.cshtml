@model GarageManagementSystem.IdentityServer.Controllers.EditClaimViewModel

<form id="editClaimForm">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="OriginalName" />
    
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Claim Name <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" placeholder="e.g., custom_claim" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="DisplayName" class="control-label">Display Name</label>
                <input asp-for="DisplayName" class="form-control" placeholder="e.g., Custom Claim" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Description of the claim"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CustomValueSource" class="control-label">Custom Value Source</label>
                <input asp-for="CustomValueSource" class="form-control" placeholder="e.g., users:department, system:timestamp" />
                <small class="form-text text-muted">Format: Table:Column (e.g., users:department, system:timestamp, business:business_hours)</small>
                <span asp-validation-for="CustomValueSource" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="DefaultValue" class="control-label">Default Value</label>
                <input asp-for="DefaultValue" class="form-control" placeholder="e.g., Garage Management System" />
                <small class="form-text text-muted">Static value if Custom Value Source is not used</small>
                <span asp-validation-for="DefaultValue" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Category" class="control-label">Category</label>
                <select asp-for="Category" class="form-control">
                    <option value="">Select Category</option>
                    <option value="Profile">Profile</option>
                    <option value="Contact">Contact</option>
                    <option value="Standard">Standard</option>
                    <option value="Custom">Custom</option>
                    <option value="Security">Security</option>
                    <option value="Business">Business</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Settings</label>
                <div class="custom-control custom-switch">
                    <input asp-for="IsStandard" class="custom-control-input" type="checkbox" value="true" />
                    <input type="hidden" asp-for="IsStandard" value="false" />
                    <label asp-for="IsStandard" class="custom-control-label">Standard OIDC Claim</label>
                </div>
                <div class="custom-control custom-switch">
                    <input asp-for="IsActive" class="custom-control-input" type="checkbox" value="true" />
                    <input type="hidden" asp-for="IsActive" value="false" />
                    <label asp-for="IsActive" class="custom-control-label">Active</label>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-warning">Update Claim</button>
    </div>
</form>
