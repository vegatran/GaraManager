@model GarageManagementSystem.IdentityServer.Controllers.EditApiScopeViewModel

<form id="editApiScopeForm">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Name" /> @* Keep original name for comparison if name is changed *@

    <div class="row">
        <div class="col-md-6">
            <h6 class="font-weight-bold text-primary">Basic Information</h6>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Scope Name <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control form-control-sm" placeholder="e.g., admin.api" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayName" class="control-label">Display Name</label>
                <input asp-for="DisplayName" class="form-control form-control-sm" placeholder="e.g., Admin API" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control form-control-sm" rows="3" placeholder="Description of the API scope"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <h6 class="font-weight-bold text-primary">Settings</h6>
            <div class="form-group">
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="editRequired" name="Required" @(Model.Required ? "checked" : "")>
                    <label class="custom-control-label" for="editRequired">Required</label>
                </div>
            </div>
            <div class="form-group">
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="editEmphasize" name="Emphasize" @(Model.Emphasize ? "checked" : "")>
                    <label class="custom-control-label" for="editEmphasize">Emphasize</label>
                </div>
            </div>
            <div class="form-group">
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="editShowInDiscoveryDocument" name="ShowInDiscoveryDocument" @(Model.ShowInDiscoveryDocument ? "checked" : "")>
                    <label class="custom-control-label" for="editShowInDiscoveryDocument">Show in Discovery Document</label>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <!-- User Claims -->
        <div class="col-md-12">
            <h6 class="font-weight-bold text-primary">User Claims</h6>
            <div class="form-group">
                <label for="editUserClaims">Available Claims</label>
                <select id="editUserClaims" name="UserClaims" class="form-control form-control-sm select2" multiple 
                        data-selected-values="@string.Join(",", Model.UserClaims)">
                    <!-- Options will be loaded dynamically from ClaimsManagement -->
                </select>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-warning">Update API Scope</button>
    </div>
</form>
