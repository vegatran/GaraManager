@{
    ViewData["Title"] = "API Scope Management";
}

<section class="content">
    <div class="container-fluid">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">API Scopes</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#createApiScopeModal">
                                <i class="fas fa-plus"></i> Add New API Scope
                            </button>
                        </div>
                    </div>
                    <div class="card-body table-responsive">
                        <table id="apiScopesTable" class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Display Name</th>
                                    <th>Description</th>
                                    <th>Required</th>
                                    <th>Emphasize</th>
                                    <th>Show in Discovery</th>
                                    <th>User Claims</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Data loaded via AJAX -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Create API Scope Modal -->
<div class="modal fade" id="createApiScopeModal" tabindex="-1" role="dialog" aria-labelledby="createApiScopeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title" id="createApiScopeModalLabel">Create New API Scope</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="createApiScopeModalBody">
                @await Html.PartialAsync("_CreateApiScope")
            </div>
        </div>
    </div>
</div>

<!-- Edit API Scope Modal -->
<div class="modal fade" id="editApiScopeModal" tabindex="-1" role="dialog" aria-labelledby="editApiScopeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title" id="editApiScopeModalLabel">Edit API Scope</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="editApiScopeModalBody">
                <!-- Partial view will be loaded here -->
            </div>
        </div>
    </div>
</div>

<!-- View API Scope Modal -->
<div class="modal fade" id="viewApiScopeModal" tabindex="-1" role="dialog" aria-labelledby="viewApiScopeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title" id="viewApiScopeModalLabel">API Scope Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="viewApiScopeModalBody">
                <!-- Partial view will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/api-scope-management.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            // Initialize the module
            ApiScopeManagement.init();
        });
    </script>
}
