@{
    ViewData["Title"] = "Quản Lý Phiếu Nhập Hàng";
}

@Html.AntiForgeryToken()

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản Lý Phiếu Nhập Hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "StockManagement")">Nhập Xuất Kho</a></li>
                    <li class="breadcrumb-item active">Phiếu Nhập Hàng</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Danh Sách Phiếu Nhập Hàng</h3>
                        <div class="card-tools">
                            <a href="@Url.Action("Index", "StockManagement")" class="btn btn-success btn-sm">
                                <i class="fas fa-plus"></i> Tạo Phiếu Nhập Mới
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="searchInput">Tìm kiếm:</label>
                                <input type="text" id="searchInput" class="form-control form-control-sm" placeholder="Tìm theo số phiếu, nhà cung cấp...">
                            </div>
                        </div>
                        <table id="purchaseOrdersTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Số Phiếu</th>
                                    <th>Ngày Tạo</th>
                                    <th>Nhà Cung Cấp</th>
                                    <th>Số Loại</th>
                                    <th>Tổng Tiền</th>
                                    <th>Trạng Thái</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Include Modal Partial Views -->
@await Html.PartialAsync("_ViewPurchaseOrderModal")
@await Html.PartialAsync("_ConfirmReceiptModal")

@section Scripts {
    <script src="~/js/purchase-order-management.js" asp-append-version="true"></script>
}
