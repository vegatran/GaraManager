@{
    ViewData["Title"] = "Theo Dõi PO";
}

@Html.AntiForgeryToken()

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Theo Dõi PO</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "PurchaseOrder")">Quản Lý Kho</a></li>
                    <li class="breadcrumb-item active">Theo Dõi PO</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Summary Cards -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3 id="delayedCount">0</h3>
                        <p>Quá Hạn</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                    <a href="#" class="small-box-footer" id="filterDelayed">
                        Xem chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3 id="atRiskCount">0</h3>
                        <p>Sắp Đến Hạn</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <a href="#" class="small-box-footer" id="filterAtRisk">
                        Xem chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3 id="onTimeCount">0</h3>
                        <p>Đúng Hạn</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <a href="#" class="small-box-footer" id="filterOnTime">
                        Xem chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3 id="totalCount">0</h3>
                        <p>Tổng Số PO</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-truck"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter Panel -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Bộ Lọc</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Nhà Cung Cấp</label>
                                    <select id="supplierFilter" class="form-control form-control-sm select2" style="width: 100%;">
                                        <option value="">-- Tất cả --</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Trạng Thái Giao Hàng</label>
                                    <select id="deliveryStatusFilter" class="form-control form-control-sm">
                                        <option value="">-- Tất cả --</option>
                                        <option value="OnTime">Đúng Hạn</option>
                                        <option value="AtRisk">Sắp Đến Hạn</option>
                                        <option value="Delayed">Quá Hạn</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Số Ngày Đến Hạn</label>
                                    <input type="number" id="daysUntilFilter" class="form-control form-control-sm" placeholder="VD: 3" min="0" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <button type="button" class="btn btn-primary btn-sm btn-block" id="btnSearch">
                                        <i class="fas fa-search"></i> Tìm Kiếm
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- PO Tracking Table -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Danh Sách PO Đang Chờ Giao Hàng</h3>
                        <div class="card-tools">
            <button type="button" class="btn btn-success btn-sm" id="btnRefresh">
                                <i class="fas fa-sync-alt"></i> Làm Mới
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="trackingTable" class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Mã PO</th>
                                    <th>Nhà Cung Cấp</th>
                                    <th>Ngày Đặt</th>
                                    <th>Ngày Gửi</th>
                                    <th>Ngày Dự Kiến</th>
                                    <th>Mã Vận Đơn</th>
                                    <th>Trạng Thái</th>
                                    <th>Số Ngày</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Update Tracking Modal -->
<div class="modal fade" id="updateTrackingModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cập Nhật Thông Tin Tracking</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="updateTrackingForm">
                    <input type="hidden" id="updatePoId" />
                    <div class="row">
                        <div class="col-md-6">
                        <div class="form-group">
                                <label>Mã Vận Đơn</label>
                                <input type="text" id="updateTrackingNumber" class="form-control form-control-sm" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Phương Thức Vận Chuyển</label>
                                <input type="text" id="updateShippingMethod" class="form-control form-control-sm" placeholder="VD: Xe tải, Giao hàng nhanh..." />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Ngày Dự Kiến Giao Hàng</label>
                                <input type="date" id="updateExpectedDeliveryDate" class="form-control form-control-sm" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Ngày Gửi Hàng (In-Transit)</label>
                                <input type="date" id="updateInTransitDate" class="form-control form-control-sm" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Ghi Chú</label>
                                <textarea id="updateDeliveryNotes" class="form-control form-control-sm" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-check">
                                <input type="checkbox" id="markAsInTransit" class="form-check-input" />
                                <label class="form-check-label" for="markAsInTransit">
                                    Đánh dấu PO đã gửi hàng (chuyển sang InTransit)
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary btn-sm" id="btnSaveTracking">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- PO Timeline Modal -->
<div class="modal fade" id="timelineModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Lịch Sử PO</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="timelineContent">
                    <!-- Timeline will be rendered here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Ensure DataTables is loaded
        $(document).ready(function() {
            if (typeof POTracking !== 'undefined') {
                POTracking.init();
            }
        });
    </script>
    <script src="~/js/po-tracking.js"></script>
}

