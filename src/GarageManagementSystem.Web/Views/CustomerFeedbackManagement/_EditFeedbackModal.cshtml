<!-- Edit Feedback Modal -->
<div class="modal fade" id="editFeedbackModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h4 class="modal-title"><i class="fas fa-edit mr-2"></i>Chỉnh Sửa Phản Hồi</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="editFeedbackForm">
                <input type="hidden" id="editFeedbackId" name="Id">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Khách Hàng</label>
                                <p class="form-control-static" id="editCustomerName">-</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Số Phiếu</label>
                                <p class="form-control-static" id="editOrderNumber">-</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editRating">Đánh Giá</label>
                                <select class="form-control form-control-sm" id="editRating" name="Rating">
                                    <option value="">-- Không thay đổi --</option>
                                    <option value="Excellent">Xuất sắc</option>
                                    <option value="Good">Tốt</option>
                                    <option value="Neutral">Bình thường</option>
                                    <option value="Poor">Kém</option>
                                    <option value="VeryPoor">Rất kém</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editStatus">Trạng Thái</label>
                                <select class="form-control form-control-sm" id="editStatus" name="Status">
                                    <option value="">-- Không thay đổi --</option>
                                    <option value="New">Mới</option>
                                    <option value="InProgress">Đang xử lý</option>
                                    <option value="Responded">Đã phản hồi</option>
                                    <option value="Resolved">Đã giải quyết</option>
                                    <option value="Closed">Đã đóng</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="editTopic">Chủ Đề</label>
                        <input type="text" class="form-control form-control-sm" id="editTopic" name="Topic" maxlength="200" placeholder="Nhập chủ đề phản hồi">
                    </div>
                    <div class="form-group">
                        <label for="editContent">Nội Dung</label>
                        <textarea class="form-control form-control-sm" id="editContent" name="Content" rows="4" maxlength="2000" placeholder="Nhập nội dung phản hồi"></textarea>
                        <small class="form-text text-muted">Tối đa 2000 ký tự</small>
                    </div>
                    <div class="form-group">
                        <label for="editActionTaken">Hành Động Đã Thực Hiện</label>
                        <textarea class="form-control form-control-sm" id="editActionTaken" name="ActionTaken" rows="3" maxlength="1000" placeholder="Mô tả hành động đã thực hiện để xử lý phản hồi"></textarea>
                        <small class="form-text text-muted">Tối đa 1000 ký tự</small>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editFollowUpById">Nhân Viên Follow-up</label>
                                <select class="form-control form-control-sm select2" id="editFollowUpById" name="FollowUpById" style="width: 100%;">
                                    <option value="">-- Chọn Nhân Viên --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editFollowUpDate">Ngày Follow-up</label>
                                <input type="datetime-local" class="form-control form-control-sm" id="editFollowUpDate" name="FollowUpDate">
                                <small class="form-text text-muted">Để trống để giữ nguyên ngày hiện tại</small>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editFeedbackChannelId">Kênh Phản Hồi</label>
                                <select class="form-control form-control-sm select2" id="editFeedbackChannelId" name="FeedbackChannelId" style="width: 100%;">
                                    <option value="">-- Chọn Kênh --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editScore">Điểm Số (NPS)</label>
                                <input type="number" class="form-control form-control-sm" id="editScore" name="Score" min="0" max="10" placeholder="0-10">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="editNotes">Ghi Chú</label>
                        <textarea class="form-control form-control-sm" id="editNotes" name="Notes" rows="3" maxlength="1000" placeholder="Ghi chú nội bộ"></textarea>
                        <small class="form-text text-muted">Tối đa 1000 ký tự</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                        <i class="fas fa-times"></i> Đóng
                    </button>
                    <button type="submit" class="btn btn-warning btn-sm">
                        <i class="fas fa-save"></i> Cập Nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

