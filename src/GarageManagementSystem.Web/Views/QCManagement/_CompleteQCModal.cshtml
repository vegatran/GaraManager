<!-- Modal Hoàn Thành QC -->
<div class="modal fade" id="completeQCModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success">
                <h5 class="modal-title">
                    <i class="fas fa-check-circle"></i> Hoàn Thành Kiểm Tra QC
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="completeQCForm">
                    <input type="hidden" id="completeQCServiceOrderId" />
                    
                    <!-- Thông tin JO -->
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Số Đơn Hàng:</label>
                                        <input type="text" id="completeQCOrderNumber" class="form-control form-control-sm" readonly />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Người Kiểm Tra:</label>
                                        <input type="text" id="completeQCInspectorName" class="form-control form-control-sm" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Kết quả QC -->
                    <div class="form-group">
                        <label>Kết Quả QC <span class="text-danger">*</span></label>
                        <div class="btn-group btn-group-toggle w-100" data-toggle="buttons">
                            <label class="btn btn-outline-success btn-sm active">
                                <input type="radio" name="qcResult" value="Pass" autocomplete="off" checked>
                                <i class="fas fa-check-circle"></i> Đạt
                            </label>
                            <label class="btn btn-outline-danger btn-sm">
                                <input type="radio" name="qcResult" value="Fail" autocomplete="off">
                                <i class="fas fa-times-circle"></i> Không Đạt
                            </label>
                        </div>
                    </div>

                    <!-- Ghi chú QC -->
                    <div class="form-group">
                        <label>Ghi Chú QC</label>
                        <textarea class="form-control form-control-sm" id="completeQCNotes" rows="3" placeholder="Ghi chú về kết quả kiểm tra QC"></textarea>
                    </div>

                    <!-- Cần làm lại -->
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="completeQCReworkRequired">
                            <label class="form-check-label" for="completeQCReworkRequired">
                                Cần làm lại
                            </label>
                        </div>
                    </div>

                    <!-- Ghi chú làm lại -->
                    <div class="form-group" id="reworkNotesGroup" style="display: none;">
                        <label>Ghi Chú Làm Lại</label>
                        <textarea class="form-control form-control-sm" id="completeQCReworkNotes" rows="2" placeholder="Ghi chú về những gì cần làm lại"></textarea>
                    </div>

                    <!-- QC Checklist -->
                    <div class="card">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">
                                <i class="fas fa-list-check"></i> QC Checklist
                            </h6>
                        </div>
                        <div class="card-body">
                            <div id="completeQCChecklistItems">
                                <!-- Checklist items sẽ được load từ QC hiện tại -->
                            </div>
                            <button type="button" class="btn btn-outline-secondary btn-sm mt-2" id="btnAddCompleteChecklistItem">
                                <i class="fas fa-plus"></i> Thêm Hạng Mục Kiểm Tra
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                    <i class="fas fa-times"></i> Hủy
                </button>
                <button type="button" class="btn btn-success btn-sm" id="btnSubmitCompleteQC">
                    <i class="fas fa-check"></i> Hoàn Thành QC
                </button>
            </div>
        </div>
    </div>
</div>

