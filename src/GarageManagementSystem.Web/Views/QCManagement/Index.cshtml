@{
    ViewData["Title"] = "Quản Lý Kiểm Tra Chất Lượng (QC)";
}

@Html.AntiForgeryToken()

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản Lý Kiểm Tra Chất Lượng (QC)</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Quản Lý QC</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Danh Sách JO Chờ Kiểm Tra QC</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="qcTable" class="table table-bordered table-striped dt-responsive nowrap table-sm" width="100%">
                                <thead>
                                    <tr>
                                        <th>Số Đơn Hàng</th>
                                        <th>Khách Hàng</th>
                                        <th>Xe</th>
                                        <th>Ngày Hoàn Thành</th>
                                        <th>Giờ Công Thực Tế</th>
                                        <th>Số Lần QC Không Đạt</th>
                                        <th>Thao Tác</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Include Modal Partial Views -->
@await Html.PartialAsync("_StartQCModal")
@await Html.PartialAsync("_CompleteQCModal")
@await Html.PartialAsync("_ViewQCModal")
@await Html.PartialAsync("_HandoverModal")

@section Scripts {
    <script src="~/js/qc-management.js" asp-append-version="true"></script>
}

