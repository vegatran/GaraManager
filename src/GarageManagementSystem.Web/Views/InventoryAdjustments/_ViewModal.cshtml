<div class="modal fade" id="viewAdjustmentModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title">Chi Tiết Phiếu Điều Chỉnh Tồn Kho</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Tab Navigation -->
                <ul class="nav nav-tabs" id="viewAdjustmentTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="info-tab" data-toggle="tab" href="#info" role="tab">
                            <i class="fas fa-info-circle"></i> Thông Tin
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="history-tab" data-toggle="tab" href="#history" role="tab">
                            <i class="fas fa-history"></i> Lịch Sử
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="comments-tab" data-toggle="tab" href="#comments" role="tab">
                            <i class="fas fa-comments"></i> Ghi Chú (<span id="commentsCount">0</span>)
                        </a>
                    </li>
                </ul>

                <!-- Tab Content -->
                <div class="tab-content mt-3" id="viewAdjustmentTabContent">
                    <!-- Tab 1: Information -->
                    <div class="tab-pane fade show active" id="info" role="tabpanel">
                        <!-- Basic Information -->
                        <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-info-circle"></i> Thông Tin Cơ Bản</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <strong>Mã Phiếu:</strong>
                                <p id="viewAdjustmentNumber" class="text-muted">-</p>
                            </div>
                            <div class="col-md-3">
                                <strong>Ngày Điều Chỉnh:</strong>
                                <p id="viewAdjustmentDate" class="text-muted">-</p>
                            </div>
                            <div class="col-md-3">
                                <strong>Trạng Thái:</strong>
                                <p id="viewAdjustmentStatus">-</p>
                            </div>
                            <div class="col-md-3">
                                <strong>Phiếu Kiểm Kê:</strong>
                                <p id="viewInventoryCheck" class="text-muted">-</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <strong>Kho:</strong>
                                <p id="viewWarehouse" class="text-muted">-</p>
                            </div>
                            <div class="col-md-4">
                                <strong>Khu Vực:</strong>
                                <p id="viewWarehouseZone" class="text-muted">-</p>
                            </div>
                            <div class="col-md-4">
                                <strong>Kệ/Ngăn:</strong>
                                <p id="viewWarehouseBin" class="text-muted">-</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Lý Do:</strong>
                                <p id="viewReason" class="text-muted">-</p>
                            </div>
                            <div class="col-md-6">
                                <strong>Ghi Chú:</strong>
                                <p id="viewNotes" class="text-muted">-</p>
                            </div>
                        </div>
                        <div class="row" id="viewApprovalInfo" style="display: none;">
                            <div class="col-md-6">
                                <strong>Người Duyệt:</strong>
                                <p id="viewApprovedBy" class="text-muted">-</p>
                            </div>
                            <div class="col-md-6">
                                <strong>Ngày Duyệt:</strong>
                                <p id="viewApprovedAt" class="text-muted">-</p>
                            </div>
                        </div>
                        <div class="row" id="viewRejectionInfo" style="display: none;">
                            <div class="col-md-12">
                                <strong>Lý Do Từ Chối:</strong>
                                <p id="viewRejectionReason" class="text-danger">-</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Items -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-list"></i> Chi Tiết Điều Chỉnh</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Mã Phụ Tùng</th>
                                        <th>Tên Phụ Tùng</th>
                                        <th>Số Lượng Trước</th>
                                        <th>Thay Đổi</th>
                                        <th>Số Lượng Sau</th>
                                        <th>Ghi Chú</th>
                                    </tr>
                                </thead>
                                <tbody id="viewAdjustmentItems">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                    </div>

                    <!-- Tab 2: History -->
                    <div class="tab-pane fade" id="history" role="tabpanel">
                        <div class="card card-info card-outline">
                            <div class="card-header">
                                <h3 class="card-title"><i class="fas fa-history"></i> Lịch Sử Thay Đổi</h3>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm table-bordered">
                                        <thead>
                                            <tr>
                                                <th width="15%">Thời Gian</th>
                                                <th width="15%">Hành Động</th>
                                                <th width="20%">Người Thực Hiện</th>
                                                <th width="50%">Chi Tiết</th>
                                            </tr>
                                        </thead>
                                        <tbody id="historyTableBody">
                                            <tr>
                                                <td colspan="4" class="text-center text-muted">
                                                    <i class="fas fa-spinner fa-spin"></i> Đang tải...
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tab 3: Comments -->
                    <div class="tab-pane fade" id="comments" role="tabpanel">
                        <div class="card card-warning card-outline">
                            <div class="card-header">
                                <h3 class="card-title"><i class="fas fa-comments"></i> Ghi Chú</h3>
                            </div>
                            <div class="card-body">
                                <!-- Comments Timeline -->
                                <div id="commentsTimeline" class="timeline">
                                    <div class="text-center text-muted">
                                        <i class="fas fa-spinner fa-spin"></i> Đang tải...
                                    </div>
                                </div>
                                
                                <!-- Add Comment Form -->
                                <div class="mt-3 border-top pt-3">
                                    <div class="form-group">
                                        <label>Thêm Ghi Chú:</label>
                                        <textarea id="newCommentText" class="form-control" rows="3" placeholder="Nhập ghi chú..."></textarea>
                                    </div>
                                    <button type="button" class="btn btn-primary btn-sm" id="addCommentBtn">
                                        <i class="fas fa-plus"></i> Thêm Ghi Chú
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-success" id="btnApproveAdjustment" style="display: none;">
                    <i class="fas fa-check"></i> Duyệt
                </button>
                <button type="button" class="btn btn-danger" id="btnRejectAdjustment" style="display: none;">
                    <i class="fas fa-times"></i> Từ Chối
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Approve Modal -->
<div class="modal fade" id="approveAdjustmentModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success">
                <h5 class="modal-title">Duyệt Phiếu Điều Chỉnh</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Ghi Chú (Tùy chọn):</label>
                    <textarea id="approveNotes" class="form-control" rows="3"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-success" id="confirmApproveBtn">Xác Nhận Duyệt</button>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectAdjustmentModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title">Từ Chối Phiếu Điều Chỉnh</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Lý Do Từ Chối <span class="text-danger">*</span>:</label>
                    <textarea id="rejectionReason" class="form-control" rows="3" required></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" id="confirmRejectBtn">Xác Nhận Từ Chối</button>
            </div>
        </div>
    </div>
</div>

