@{
    ViewData["Title"] = "Quản Lý Điều Chỉnh Tồn Kho";
}

@Html.AntiForgeryToken()

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản Lý Điều Chỉnh Tồn Kho</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                    <li class="breadcrumb-item active">Điều Chỉnh Tồn Kho</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Danh Sách Phiếu Điều Chỉnh</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-success btn-sm" id="bulkApproveBtn" style="display: none;">
                                <i class="fas fa-check-double"></i> Duyệt Nhiều (<span id="selectedCount">0</span>)
                            </button>
                            <button type="button" class="btn btn-danger btn-sm" id="bulkRejectBtn" style="display: none;">
                                <i class="fas fa-times-circle"></i> Từ Chối Nhiều (<span id="selectedCount">0</span>)
                            </button>
                            <button type="button" class="btn btn-primary btn-sm" id="createAdjustmentBtn">
                                <i class="fas fa-plus"></i> Tạo Phiếu Điều Chỉnh Mới
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Filters -->
                        <div class="row mb-3">
                            <div class="col-md-2">
                                <select id="filterStatus" class="form-control form-control-sm">
                                    <option value="">Tất cả trạng thái</option>
                                    <option value="Pending">Chờ duyệt</option>
                                    <option value="Approved">Đã duyệt</option>
                                    <option value="Rejected">Đã từ chối</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select id="filterWarehouse" class="form-control form-control-sm">
                                    <option value="">Tất cả kho</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <input type="date" id="filterStartDate" class="form-control form-control-sm" placeholder="Từ ngày">
                            </div>
                            <div class="col-md-2">
                                <input type="date" id="filterEndDate" class="form-control form-control-sm" placeholder="Đến ngày">
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-info btn-sm btn-block" id="applyFiltersBtn">
                                    <i class="fas fa-filter"></i> Lọc
                                </button>
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-secondary btn-sm btn-block" id="clearFiltersBtn">
                                    <i class="fas fa-times"></i> Xóa bộ lọc
                                </button>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table id="inventoryAdjustmentsTable" class="table table-bordered table-striped dt-responsive nowrap" width="100%">
                                <thead>
                                    <tr>
                                        <th width="30px">
                                            <input type="checkbox" id="selectAllAdjustments" title="Chọn tất cả">
                                        </th>
                                        <th>Mã Phiếu</th>
                                        <th>Ngày Điều Chỉnh</th>
                                        <th>Phiếu Kiểm Kê</th>
                                        <th>Kho</th>
                                        <th>Khu Vực</th>
                                        <th>Kệ/Ngăn</th>
                                        <th>Trạng Thái</th>
                                        <th>Số Items</th>
                                        <th>Lý Do</th>
                                        <th>Người Duyệt</th>
                                        <th>Thao Tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("_ViewModal")
@await Html.PartialAsync("_CreateFromCheckModal")
@await Html.PartialAsync("_CreateModal")
@await Html.PartialAsync("_ItemModal")

<!-- Bulk Approve Modal -->
<div class="modal fade" id="bulkApproveModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success">
                <h5 class="modal-title">Duyệt Nhiều Phiếu Điều Chỉnh</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn duyệt <strong id="bulkApproveCount">0</strong> phiếu điều chỉnh đã chọn?</p>
                    <div class="form-group">
                    <label>Ghi Chú (Tùy chọn):</label>
                        <textarea id="bulkApproveNotes" class="form-control form-control-sm" rows="3" placeholder="Nhập ghi chú (nếu có)"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-success btn-sm" id="confirmBulkApproveBtn">
                    <i class="fas fa-check-double"></i> Xác Nhận Duyệt
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Bulk Reject Modal -->
<div class="modal fade" id="bulkRejectModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title">Từ Chối Nhiều Phiếu Điều Chỉnh</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn từ chối <strong id="bulkRejectCount">0</strong> phiếu điều chỉnh đã chọn?</p>
                <div class="form-group">
                    <label>Lý Do Từ Chối <span class="text-danger">*</span>:</label>
                    <textarea id="bulkRejectionReason" class="form-control form-control-sm" rows="3" required placeholder="Nhập lý do từ chối"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger btn-sm" id="confirmBulkRejectBtn">
                    <i class="fas fa-times-circle"></i> Xác Nhận Từ Chối
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/inventory-adjustments.js" asp-append-version="true"></script>
}

