@{
    ViewData["Title"] = "Quản Lý Nhân Viên";
}

@Html.AntiForgeryToken()

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản Lý Nhân Viên</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                    <li class="breadcrumb-item active">Nhân Viên</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Danh Sách Nhân Viên</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#createEmployeeModal">
                                <i class="fas fa-plus"></i> Thêm Nhân Viên
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="employeeTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên Nhân Viên</th>
                                    <th>Chức Vụ</th>
                                    <th>Bộ Phận</th>
                                    <th>Số Điện Thoại</th>
                                    <th>Email</th>
                                    <th>Ngày Tuyển</th>
                                    <th>Trạng Thái</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Create Employee Modal -->
<div class="modal fade modal-with-select2" id="createEmployeeModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h4 class="modal-title">Thêm Nhân Viên Mới</h4>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="createEmployeeForm">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createName">Tên Nhân Viên <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-sm" id="createName" name="Name" required maxlength="100">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createPhone">Số Điện Thoại</label>
                                <input type="tel" class="form-control form-control-sm" id="createPhone" name="Phone" maxlength="20">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createEmail">Email</label>
                                <input type="email" class="form-control form-control-sm" id="createEmail" name="Email" maxlength="200">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createChức Vụ">Chức Vụ</label>
                                <select class="form-control form-control-sm select2" id="createChức Vụ" name="Chức Vụ" style="width: 100%;">
                                    <option value="">-- Chọn Chức Vụ --</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createBộ Phận">Bộ Phận</label>
                                <select class="form-control form-control-sm select2" id="createBộ Phận" name="Bộ Phận" style="width: 100%;">
                                    <option value="">-- Chọn Bộ Phận --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createHireDate">Ngày Tuyển</label>
                                <input type="date" class="form-control form-control-sm" id="createHireDate" name="HireDate">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createSalary">Lương (VNĐ)</label>
                                <input type="number" class="form-control form-control-sm" id="createSalary" name="Salary" min="0" step="100000">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createTrạng Thái">Trạng Thái</label>
                                <select class="form-control form-control-sm" id="createTrạng Thái" name="Trạng Thái">
                                    <option value="Active" selected>Hoạt Động</option>
                                    <option value="Inactive">Không Hoạt Động</option>
                                    <option value="On Leave">Nghỉ Phép</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="createĐịa Chỉ">Địa Chỉ</label>
                        <textarea class="form-control form-control-sm" id="createĐịa Chỉ" name="Địa Chỉ" rows="2" maxlength="500"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="createKỹ Năng">Kỹ Năng</label>
                        <textarea class="form-control form-control-sm" id="createKỹ Năng" name="Kỹ Năng" rows="2" maxlength="1000" placeholder="Ví dụ: Sửa chữa động cơ, Điện tử, Điều hòa..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                        <i class="fas fa-times"></i> Đóng
                    </button>
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Employee Modal -->
<div class="modal fade modal-with-select2" id="editEmployeeModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h4 class="modal-title">Sửa Thông Tin Nhân Viên</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="editEmployeeForm">
                <div class="modal-body">
                    <input type="hidden" id="editId" name="Id">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editName">Tên Nhân Viên <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-sm" id="editName" name="Name" required maxlength="100">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editPhone">Số Điện Thoại</label>
                                <input type="tel" class="form-control form-control-sm" id="editPhone" name="Phone" maxlength="20">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editEmail">Email</label>
                                <input type="email" class="form-control form-control-sm" id="editEmail" name="Email" maxlength="200">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editChức Vụ">Chức Vụ</label>
                                <select class="form-control form-control-sm select2" id="editChức Vụ" name="Chức Vụ" style="width: 100%;">
                                    <option value="">-- Chọn Chức Vụ --</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editBộ Phận">Bộ Phận</label>
                                <select class="form-control form-control-sm select2" id="editBộ Phận" name="Bộ Phận" style="width: 100%;">
                                    <option value="">-- Chọn Bộ Phận --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editHireDate">Ngày Tuyển</label>
                                <input type="date" class="form-control form-control-sm" id="editHireDate" name="HireDate">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editSalary">Lương (VNĐ)</label>
                                <input type="number" class="form-control form-control-sm" id="editSalary" name="Salary" min="0" step="100000">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editTrạng Thái">Trạng Thái</label>
                                <select class="form-control form-control-sm" id="editTrạng Thái" name="Trạng Thái">
                                    <option value="Active">Active</option>
                                    <option value="Inactive">Inactive</option>
                                    <option value="On Leave">On Leave</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="editAddress">Địa Chỉ</label>
                        <textarea class="form-control form-control-sm" id="editAddress" name="Address" rows="2" maxlength="500"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="editSkills">Kỹ Năng</label>
                        <textarea class="form-control form-control-sm" id="editSkills" name="Skills" rows="2" maxlength="1000"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                        <i class="fas fa-times"></i> Đóng
                    </button>
                    <button type="submit" class="btn btn-warning btn-sm">
                        <i class="fas fa-save"></i> Cập Nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/employee-management.js"></script>
    <script>
        $(document).ready(function() {
            EmployeeManagement.init();
        });
    </script>
}
