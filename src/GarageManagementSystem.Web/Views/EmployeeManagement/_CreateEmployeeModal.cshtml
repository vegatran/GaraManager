<!-- Create Employee Modal -->
<div class="modal fade modal-with-select2" id="createEmployeeModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h4 class="modal-title">Thêm Nhân Viên Mới</h4>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="createEmployeeForm">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createName">Tên Nhân Viên <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-sm" id="createName" name="Name" required maxlength="100">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createPhone">Số Điện Thoại</label>
                                <input type="tel" class="form-control form-control-sm" id="createPhone" name="Phone" maxlength="20">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createEmail">Email</label>
                                <input type="email" class="form-control form-control-sm" id="createEmail" name="Email" maxlength="200">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createPosition">Chức Vụ</label>
                                <select class="form-control form-control-sm select2" id="createPosition" name="Position" style="width: 100%;">
                                    <option value="">-- Chọn Chức Vụ --</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createDepartment">Bộ Phận</label>
                                <select class="form-control form-control-sm select2" id="createDepartment" name="Department" style="width: 100%;">
                                    <option value="">-- Chọn Bộ Phận --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createHireDate">Ngày Tuyển</label>
                                <input type="date" class="form-control form-control-sm" id="createHireDate" name="HireDate">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createSalary">Lương (VNĐ)</label>
                                <input type="number" class="form-control form-control-sm" id="createSalary" name="Salary" min="0" step="100000">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createStatus">Trạng Thái</label>
                                <select class="form-control form-control-sm" id="createStatus" name="Status">
                                    <option value="Active" selected>Hoạt Động</option>
                                    <option value="Inactive">Không Hoạt Động</option>
                                    <option value="On Leave">Nghỉ Phép</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="createAddress">Địa Chỉ</label>
                        <textarea class="form-control form-control-sm" id="createAddress" name="Address" rows="2" maxlength="500"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="createSkills">Kỹ Năng</label>
                        <textarea class="form-control form-control-sm" id="createSkills" name="Skills" rows="2" maxlength="1000" placeholder="Ví dụ: Sửa chữa động cơ, Điện tử, Điều hòa..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                        <i class="fas fa-times"></i> Đóng
                    </button>
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
