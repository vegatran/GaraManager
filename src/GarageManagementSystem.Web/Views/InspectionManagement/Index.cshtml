@{
    ViewData["Title"] = "Quản Lý Kiểm Tra Xe";
}

@Html.AntiForgeryToken()

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản Lý Kiểm Tra Xe</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Kiểm Tra Xe</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Danh Sách Kiểm Tra Xe</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#createInspectionModal">
                                    <i class="fas fa-plus"></i> Thêm Kiểm Tra Mới
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <table id="inspectionTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Số Kiểm Tra</th>
                                        <th>Thông Tin Xe</th>
                                        <th>Khách Hàng</th>
                                        <th>Kỹ Thuật Viên</th>
                                        <th>Ngày Kiểm Tra</th>
                                        <th>Trạng Thái</th>
                                        <th>Số Km</th>
                                        <th>Tình Trạng Chung</th>
                                        <th>Thao Tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

@await Html.PartialAsync("_CreateInspectionModal")
@await Html.PartialAsync("_EditInspectionModal")
@await Html.PartialAsync("_ViewInspectionModal")

@section Scripts {
    <script src="~/js/inspection-management.js" asp-append-version="true"></script>
}
