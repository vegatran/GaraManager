@{
    ViewData["Title"] = "Sổ Quỹ Tiền Mặt/Ngân Hàng";
}

@Html.AntiForgeryToken()

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Sổ Quỹ Tiền Mặt/Ngân Hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a href="#">Tài Chính</a></li>
                    <li class="breadcrumb-item active">Sổ Quỹ</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Filter Section -->
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-filter"></i> Bộ Lọc
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                            <div class="form-group">
                                <label>Từ Ngày</label>
                                <input type="date" id="filterFromDate" class="form-control form-control-sm" />
                            </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Đến Ngày</label>
                                <input type="date" id="filterToDate" class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <div>
                                    <button type="button" id="btnFilter" class="btn btn-primary btn-sm">
                                    <i class="fas fa-search"></i> Lọc
                                </button>
                                    <button type="button" id="btnResetFilter" class="btn btn-secondary btn-sm">
                                    <i class="fas fa-redo"></i> Đặt Lại
                                </button>
                                    <button type="button" id="btnExportExcel" class="btn btn-success btn-sm">
                                    <i class="fas fa-file-excel"></i> Xuất Excel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tab Navigation -->
        <div class="card card-primary card-outline">
            <div class="card-header p-0 border-bottom-0">
                <ul class="nav nav-tabs" id="registerTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="cash-tab" data-toggle="tab" href="#cash-register" role="tab" aria-controls="cash-register" aria-selected="true">
                            <i class="fas fa-money-bill-wave mr-1"></i>Sổ Quỹ Tiền Mặt
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="bank-tab" data-toggle="tab" href="#bank-register" role="tab" aria-controls="bank-register" aria-selected="false">
                            <i class="fas fa-university mr-1"></i>Sổ Quỹ Ngân Hàng
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="registerTabContent">
                    <!-- Cash Register Tab -->
                    <div class="tab-pane fade show active" id="cash-register" role="tabpanel" aria-labelledby="cash-tab">
                        <!-- Summary Cards -->
                        <div class="row mb-3">
                            <div class="col-lg-3 col-6">
                                <div class="small-box bg-info">
                                    <div class="inner">
                                        <h3 id="cashOpeningBalance">0</h3>
                                        <p>Số Dư Đầu Kỳ</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-wallet"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-6">
                                <div class="small-box bg-success">
                                    <div class="inner">
                                        <h3 id="cashTotalIncome">0</h3>
                                        <p>Tổng Thu</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-arrow-up"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-6">
                                <div class="small-box bg-danger">
                                    <div class="inner">
                                        <h3 id="cashTotalExpense">0</h3>
                                        <p>Tổng Chi</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-arrow-down"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-6">
                                <div class="small-box bg-warning">
                                    <div class="inner">
                                        <h3 id="cashClosingBalance">0</h3>
                                        <p>Số Dư Cuối Kỳ</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-calculator"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Transactions Table -->
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <i class="fas fa-list"></i> Danh Sách Giao Dịch
                                    <span class="badge badge-primary ml-2" id="cashTransactionCount">0</span>
                                </h3>
                            </div>
                            <div class="card-body">
                                <table id="cashTransactionsTable" class="table table-bordered table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Ngày GD</th>
                                            <th>Số Phiếu</th>
                                            <th>Loại</th>
                                            <th>Danh Mục</th>
                                            <th>Mô Tả</th>
                                            <th>Thu</th>
                                            <th>Chi</th>
                                            <th>Nhân Viên</th>
                                            <th>Trạng Thái</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Bank Register Tab -->
                    <div class="tab-pane fade" id="bank-register" role="tabpanel" aria-labelledby="bank-tab">
                        <!-- Summary Cards -->
                        <div class="row mb-3">
                            <div class="col-lg-3 col-6">
                                <div class="small-box bg-info">
                                    <div class="inner">
                                        <h3 id="bankOpeningBalance">0</h3>
                                        <p>Số Dư Đầu Kỳ</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-wallet"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-6">
                                <div class="small-box bg-success">
                                    <div class="inner">
                                        <h3 id="bankTotalIncome">0</h3>
                                        <p>Tổng Thu</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-arrow-up"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-6">
                                <div class="small-box bg-danger">
                                    <div class="inner">
                                        <h3 id="bankTotalExpense">0</h3>
                                        <p>Tổng Chi</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-arrow-down"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-6">
                                <div class="small-box bg-warning">
                                    <div class="inner">
                                        <h3 id="bankClosingBalance">0</h3>
                                        <p>Số Dư Cuối Kỳ</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fas fa-calculator"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Transactions Table -->
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <i class="fas fa-list"></i> Danh Sách Giao Dịch
                                    <span class="badge badge-primary ml-2" id="bankTransactionCount">0</span>
                                </h3>
                            </div>
                            <div class="card-body">
                                <table id="bankTransactionsTable" class="table table-bordered table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Ngày GD</th>
                                            <th>Số Phiếu</th>
                                            <th>Loại</th>
                                            <th>Danh Mục</th>
                                            <th>Mô Tả</th>
                                            <th>Thu</th>
                                            <th>Chi</th>
                                            <th>Nhân Viên</th>
                                            <th>Trạng Thái</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/cash-register-management.js"></script>
}

