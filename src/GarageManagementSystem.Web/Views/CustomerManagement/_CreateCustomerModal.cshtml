<!-- Create Customer Modal -->
<div class="modal fade" id="createCustomerModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h4 class="modal-title">Thêm Khách Hàng Mới</h4>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="createCustomerForm">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createName">Tên Khách Hàng <span style="color: #dc3545 !important; font-weight: bold !important;">*</span></label>
                                <input type="text" class="form-control form-control-sm" id="createName" name="Name" required maxlength="200">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createPhone">Số Điện Thoại <span style="color: #dc3545 !important; font-weight: bold !important;">*</span></label>
                                <input type="tel" class="form-control form-control-sm" id="createPhone" name="Phone" required maxlength="20">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createEmail">Email</label> <span style="color: #dc3545 !important; font-weight: bold !important;">*</span>
                                <input type="email" class="form-control form-control-sm" id="createEmail" name="Email" maxlength="200">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createAlternativePhone">Số Điện Thoại Phụ</label>
                                <input type="tel" class="form-control form-control-sm" id="createAlternativePhone" name="AlternativePhone" maxlength="20">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createContactPersonName">Tên Người Liên Hệ</label>
                                <input type="text" class="form-control form-control-sm" id="createContactPersonName" name="ContactPersonName" maxlength="200">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="createAddress">Địa Chỉ</label>
                        <textarea class="form-control form-control-sm" id="createAddress" name="Address" rows="3" maxlength="500"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                        <i class="fas fa-times"></i> Đóng
                    </button>
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
