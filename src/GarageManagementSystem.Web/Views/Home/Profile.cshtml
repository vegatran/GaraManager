@{
    ViewData["Title"] = "Hồ Sơ Người Dùng";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Hồ Sơ Người Dùng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Hồ sơ</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-key mr-2"></i>
                            Tất Cả Claims từ IdentityServer (Tự động tải)
                        </h3>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.UserInfo != null && ViewBag.UserInfo.AllClaims != null)
                        {
                            <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                                <table class="table table-sm table-striped">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th style="width: 30%;">Loại Claim</th>
                                            <th style="width: 70%;">Giá Trị</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var claim in ViewBag.UserInfo.AllClaims)
                                        {
                                            <tr>
                                                <td>
                                                    <code class="text-primary">@claim.Type</code>
                                                </td>
                                                <td>
                                                    <span class="text-dark">@claim.Value</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-info-circle"></i>
                                    Tổng cộng: @ViewBag.UserInfo.AllClaims.Count claims tự động nhận từ IdentityServer
                                </small>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">Không có claims nào.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
