@{
    ViewData["Title"] = "Quản Lý Đơn Hàng";
}

@Html.AntiForgeryToken()

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản Lý Phiếu Sửa Chữa</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Phiếu Sửa Chữa</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Danh Sách Phiếu Sửa Chữa</h3>
                        <div class="card-tools">
                            <a href="@Url.Action("CogsSummary", "OrderManagement")" class="btn btn-outline-info btn-sm mr-2">
                                <i class="fas fa-chart-bar"></i> Báo Cáo COGS
                            </a>
                            <button type="button" class="btn btn-primary btn-sm" id="addOrderBtn">
                                <i class="fas fa-plus"></i> Tạo Phiếu Sửa Chữa Mới
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="orderTable" class="table table-bordered table-striped dt-responsive nowrap" width="100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Số Đơn Hàng</th>
                                    <th>Khách Hàng</th>
                                    <th>Xe</th>
                                    <th>Ngày Đặt</th>
                                    <th>Tổng Tiền</th>
                                    <th>Trạng Thái</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Include Modal Partial Views -->
@await Html.PartialAsync("_CreateOrderModal")
@await Html.PartialAsync("_ViewOrderModal")
@await Html.PartialAsync("_EditOrderModal")
@await Html.PartialAsync("_AssignTechnicianModal")
@await Html.PartialAsync("_ReportAdditionalIssueModal")
@await Html.PartialAsync("_CreateQuotationFromIssueModal")
<!-- ✅ 2.4: QC Modals (cần thiết cho button "Bắt Đầu QC" trong View Order Modal) -->
@await Html.PartialAsync("../QCManagement/_StartQCModal")
@await Html.PartialAsync("../QCManagement/_CompleteQCModal")
@await Html.PartialAsync("../QCManagement/_ViewQCModal")
@await Html.PartialAsync("../QCManagement/_HandoverModal")

@section Scripts {
    <script src="~/js/order-management.js" asp-append-version="true"></script>
    <!-- ✅ 2.4: Load QC module để có thể gọi từ Order Management -->
    <script src="~/js/qc-management.js" asp-append-version="true"></script>
    <script>
        // ✅ 2.4: Initialize QC module khi trang load (chỉ bind events, không init table vì không có #qcTable)
        $(document).ready(function() {
            if (window.GarageApp && window.GarageApp.QC) {
                // ✅ FIX: Bind events để đảm bảo các event handlers được đăng ký
                // Không gọi init() vì init() sẽ gọi initTable() và sẽ fail vì không có #qcTable
                if (typeof window.GarageApp.QC.bindEvents === 'function') {
                    window.GarageApp.QC.bindEvents();
                    console.log('QC module events đã được bind');
                } else {
                    console.warn('QC module bindEvents function không tồn tại');
                }
            } else {
                console.error('QC module chưa được load. Vui lòng kiểm tra qc-management.js');
            }
        });
    </script>
}
