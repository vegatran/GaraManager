<!-- Create Order Modal -->
<div class="modal fade modal-with-select2" id="createOrderModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h4 class="modal-title">Tạo Đơn Hàng Mới</h4>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="createOrderForm">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createServiceQuotationId">Báo Giá <span class="text-danger">*</span></label>
                                <select class="form-control form-control-sm select2" id="createServiceQuotationId" name="ServiceQuotationId" required style="width: 100%;">
                                    <option value="">-- Chọn Báo Giá --</option>
                                </select>
                                <small class="form-text text-muted">Chỉ hiển thị báo giá đã được phê duyệt</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createCustomerId">Khách Hàng</label>
                                <select class="form-control form-control-sm select2" id="createCustomerId" name="CustomerId" style="width: 100%;" disabled>
                                    <option value="">Sẽ tự động chọn theo báo giá</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createVehicleId">Xe</label>
                                <select class="form-control form-control-sm select2" id="createVehicleId" name="VehicleId" style="width: 100%;" disabled>
                                    <option value="">Sẽ tự động chọn theo báo giá</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createOrderDate">Ngày Đơn Hàng <span class="text-danger">*</span></label>
                                <input type="date" class="form-control form-control-sm" id="createOrderDate" name="OrderDate" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createPriority">Ưu Tiên</label>
                                <select class="form-control form-control-sm" id="createPriority" name="Priority">
                                    <option value="Normal" selected>Bình Thường</option>
                                    <option value="High">Cao</option>
                                    <option value="Urgent">Khẩn Cấp</option>
                                    <option value="Low">Thấp</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createEstimatedStartDate">Ngày Dự Kiến Bắt Đầu</label>
                                <input type="date" class="form-control form-control-sm" id="createEstimatedStartDate" name="EstimatedStartDate">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createEstimatedEndDate">Ngày Dự Kiến Kết Thúc</label>
                                <input type="date" class="form-control form-control-sm" id="createEstimatedEndDate" name="EstimatedEndDate">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="createNotes">Ghi Chú</label>
                                <textarea class="form-control form-control-sm" id="createNotes" name="Notes" rows="2" maxlength="500"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                        <i class="fas fa-times"></i> Đóng
                    </button>
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
