@{
    ViewData["Title"] = "Setup - Khởi tạo Dữ liệu Demo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">
                        <i class="fas fa-database"></i>
                        Setup - Khởi tạo Dữ liệu Demo
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Cài đặt</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Status Cards -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-chart-bar"></i>
                                Trạng thái Dữ liệu Hiện tại
                            </h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-sm btn-primary" id="refreshStatus">
                                    <i class="fas fa-sync-alt"></i>
                                    Làm mới
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row" id="statusCards">
                                <!-- Status cards will be loaded here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Setup by Phase -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-primary">
                            <h3 class="card-title text-white">
                                <i class="fas fa-layer-group"></i>
                                Khởi tạo Demo Data theo Giai đoạn
                            </h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-sm btn-danger" id="clearAll">
                                    <i class="fas fa-trash"></i>
                                    Xóa Tất cả Demo Data
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <!-- Phase 1 -->
                                <div class="col-md-6 col-lg-3 mb-3">
                                    <div class="card border-primary h-100">
                                        <div class="card-header bg-primary text-white">
                                            <h5 class="card-title mb-0">
                                                <i class="fas fa-1"></i> Giai đoạn 1
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <h6 class="text-primary">Tiếp nhận & Báo giá</h6>
                                            <p class="card-text small text-muted">
                                                Khách hàng, Xe, Nhân viên, Dịch vụ, Phụ tùng, Nhà cung cấp, 
                                                Kiểm tra xe, Báo giá, Lịch hẹn
                                            </p>
                                    <div class="d-flex flex-column">
                                        <button type="button" class="btn btn-primary btn-block mb-2" id="btnPhase1">
                                                <i class="fas fa-play"></i> Tạo Demo Data
                                            </button>
                                        <button type="button" class="btn btn-outline-danger btn-block btn-sm" id="btnClearPhase1">
                                            <i class="fas fa-trash-alt"></i> Xóa Phase 1
                                        </button>
                                    </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Phase 2 -->
                                <div class="col-md-6 col-lg-3 mb-3">
                                    <div class="card border-success h-100">
                                        <div class="card-header bg-success text-white">
                                            <h5 class="card-title mb-0">
                                                <i class="fas fa-2"></i> Giai đoạn 2
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <h6 class="text-success">Sửa chữa & Quản lý xuất kho</h6>
                                            <p class="card-text small text-muted">
                                                Đơn hàng sửa chữa, Phân công KTV, Yêu cầu vật tư, 
                                                Quản lý tiến độ, QC & Bàn giao
                                            </p>
                                            <button type="button" class="btn btn-success btn-block" id="btnPhase2">
                                                <i class="fas fa-play"></i> Tạo Demo Data
                                            </button>
                                        <button type="button" class="btn btn-outline-danger btn-block btn-sm mt-2" id="btnClearPhase2">
                                            <i class="fas fa-trash-alt"></i> Xóa Phase 2
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Phase 3 -->
                                <div class="col-md-6 col-lg-3 mb-3">
                                    <div class="card border-warning h-100">
                                        <div class="card-header bg-warning text-white">
                                            <h5 class="card-title mb-0">
                                                <i class="fas fa-3"></i> Giai đoạn 3
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <h6 class="text-warning">Quyết toán & Chăm sóc hậu mãi</h6>
                                            <p class="card-text small text-muted">
                                                Thanh toán, COGS, Bảo hành, Service Fee, 
                                                Phản hồi khách hàng
                                            </p>
                                            <button type="button" class="btn btn-warning btn-block" id="btnPhase3">
                                                <i class="fas fa-play"></i> Tạo Demo Data
                                            </button>
                                        <button type="button" class="btn btn-outline-danger btn-block btn-sm mt-2" id="btnClearPhase3">
                                            <i class="fas fa-trash-alt"></i> Xóa Phase 3
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Phase 4 -->
                                <div class="col-md-6 col-lg-3 mb-3">
                                    <div class="card border-info h-100">
                                        <div class="card-header bg-info text-white">
                                            <h5 class="card-title mb-0">
                                                <i class="fas fa-4"></i> Giai đoạn 4
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <h6 class="text-info">Chuẩn hóa & Procurement</h6>
                                            <p class="card-text small text-muted">
                                                Warehouse, SKU/Barcode, Kiểm kê định kỳ, 
                                                Điều chỉnh tồn kho, Procurement
                                            </p>
                                            <button type="button" class="btn btn-info btn-block" id="btnPhase4">
                                                <i class="fas fa-play"></i> Tạo Demo Data
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Setup by Layer -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-dark">
                            <h3 class="card-title text-white">
                                <i class="fas fa-layer-group"></i>
                                Layers Tạo dữ liệu nâng cao
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="card border-secondary h-100">
                                        <div class="card-header bg-secondary text-white">
                                            <h5 class="card-title mb-0">
                                                <i class="fas fa-coins"></i> Layer Tài chính
                                            </h5>
                                        </div>
                                        <div class="card-body d-flex flex-column">
                                            <p class="card-text small text-muted mb-3">
                                                Thanh toán, Service Fee, Phí dịch vụ & báo cáo tài chính
                                            </p>
                                            <div class="btn-group btn-group-sm mt-auto" role="group">
                                                <button type="button" class="btn btn-secondary" id="btnFinancialLayer">
                                                    <i class="fas fa-play"></i> Tạo Layer Tài chính
                                                </button>
                                                <button type="button" class="btn btn-outline-danger" id="btnClearFinancialLayer">
                                                    <i class="fas fa-trash-alt"></i> Xóa Layer
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="card border-info h-100">
                                        <div class="card-header bg-info text-white">
                                            <h5 class="card-title mb-0">
                                                <i class="fas fa-headset"></i> Layer Hậu mãi & Phản hồi
                                            </h5>
                                        </div>
                                        <div class="card-body d-flex flex-column">
                                            <p class="card-text small text-muted mb-3">
                                                Bảo hành, Phản hồi khách hàng, Lịch hẹn dịch vụ
                                            </p>
                                            <div class="btn-group btn-group-sm mt-auto" role="group">
                                                <button type="button" class="btn btn-info" id="btnFeedbackLayer">
                                                    <i class="fas fa-play"></i> Tạo Layer Hậu mãi
                                                </button>
                                                <button type="button" class="btn btn-outline-danger" id="btnClearFeedbackLayer">
                                                    <i class="fas fa-trash-alt"></i> Xóa Layer
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Setup Modules (Individual) -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-cogs"></i>
                                Modules Khởi tạo Dữ liệu (Chi tiết)
                            </h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-sm btn-success" id="setupAll">
                                    <i class="fas fa-database"></i>
                                    Setup Tất cả
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row" id="setupModules">
                                <!-- Setup modules will be loaded here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Progress Modal -->
            <div class="modal fade" id="progressModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">
                                <i class="fas fa-spinner fa-spin"></i>
                                Đang khởi tạo dữ liệu...
                            </h4>
                        </div>
                        <div class="modal-body">
                            <div class="progress mb-3">
                                <div class="progress-bar progress-bar-striped progress-bar-animated" 
                                     role="progressbar" style="width: 0%" id="progressBar">
                                    0%
                                </div>
                            </div>
                            <div id="progressText">
                                Bắt đầu khởi tạo dữ liệu...
                            </div>
                            <div id="progressDetails" class="mt-3">
                                <!-- Progress details will be shown here -->
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal" id="cancelSetup">
                                Hủy bỏ
                            </button>
                        </div>
                    </div>
                </div>
    </section>

<!-- Setup Script -->

<style>
    .setup-module {
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .setup-module:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    
    .setup-module.setup-success {
        border-left: 4px solid #28a745;
        background-color: #d4edda;
    }
    
    .setup-module.setup-error {
        border-left: 4px solid #dc3545;
        background-color: #f8d7da;
    }
    
    .setup-module.setup-progress {
        border-left: 4px solid #007bff;
        background-color: #cce7ff;
    }
    
    .status-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 15px;
        text-align: center;
        transition: transform 0.3s ease;
    }
    
    .status-card:hover {
        transform: scale(1.05);
    }
    
    .status-number {
        font-size: 2em;
        font-weight: bold;
        margin-bottom: 5px;
    }
    
    .status-label {
        font-size: 0.9em;
        opacity: 0.9;
    }
    
    .progress-step {
        padding: 10px;
        margin: 5px 0;
        border-radius: 5px;
        background: #f8f9fa;
        border-left: 3px solid #007bff;
    }
    
    .progress-step.success {
        border-left-color: #28a745;
        background: #d4edda;
    }
    
    .progress-step.error {
        border-left-color: #dc3545;
        background: #f8d7da;
    }
</style>

@section Scripts {
<script>
    window.setupConfig = {
        getModulesUrl: '@Url.Action("GetSetupModules", "Setup")',
        statusUrl: '@Url.Action("CheckDataStatus", "Setup")',
        createModuleUrl: '@Url.Action("CreateModule", "Setup")',
        clearAllUrl: '@Url.Action("ClearAllData", "Setup")',
        createPhaseUrls: {
            1: '@Url.Action("CreatePhase1", "Setup")',
            2: '@Url.Action("CreatePhase2", "Setup")',
            3: '@Url.Action("CreatePhase3", "Setup")',
            4: '@Url.Action("CreatePhase4", "Setup")'
        },
        clearPhaseUrls: {
            1: '@Url.Action("ClearPhase1", "Setup")',
            2: '@Url.Action("ClearPhase2", "Setup")',
            3: '@Url.Action("ClearPhase3", "Setup")'
        },
        createLayerUrls: {
            financial: '@Url.Action("CreateFinancialLayer", "Setup")',
            feedback: '@Url.Action("CreateFeedbackLayer", "Setup")'
        }
        ,
        clearLayerUrls: {
            financial: '@Url.Action("ClearFinancialLayer", "Setup")',
            feedback: '@Url.Action("ClearFeedbackLayer", "Setup")'
        }
    };
</script>
<script src="~/js/setup.js"></script>
}