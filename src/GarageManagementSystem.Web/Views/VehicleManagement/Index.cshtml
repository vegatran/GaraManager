@{
    ViewData["Title"] = "Quản Lý Xe & Kiểm Tra";
}

@Html.AntiForgeryToken()

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản Lý Xe & Kiểm Tra</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Xe & Kiểm Tra</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Tabs Navigation -->
        <div class="row mb-3">
            <div class="col-12">
                <ul class="nav nav-tabs" id="vehicleTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="vehicles-tab" data-toggle="tab" href="#vehicles" role="tab" aria-controls="vehicles" aria-selected="true">
                            <i class="fas fa-car"></i> Quản Lý Xe
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="inspections-tab" data-toggle="tab" href="#inspections" role="tab" aria-controls="inspections" aria-selected="false">
                            <i class="fas fa-search"></i> Kiểm Tra Xe
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Tab Content -->
        <div class="tab-content" id="vehicleTabsContent">
            <!-- Vehicles Tab -->
            <div class="tab-pane fade show active" id="vehicles" role="tabpanel" aria-labelledby="vehicles-tab">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Danh Sách Xe</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#createVehicleModal">
                                        <i class="fas fa-plus"></i> Thêm Xe Mới
                                    </button>
                                </div>
                            </div>
                    <div class="card-body">
                        <table id="vehicleTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Biển Số Xe</th>
                                    <th>Hãng Xe</th>
                                    <th>Mẫu Xe</th>
                                    <th>Năm SX</th>
                                    <th>Khách Hàng</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
            </div>

            <!-- Inspections Tab -->
            <div class="tab-pane fade" id="inspections" role="tabpanel" aria-labelledby="inspections-tab">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Danh Sách Kiểm Tra Xe</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#createInspectionModal">
                                        <i class="fas fa-plus"></i> Kiểm Tra Xe Mới
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <label for="inspectionSearchInput">Tìm kiếm:</label>
                                        <input type="text" id="inspectionSearchInput" class="form-control form-control-sm" placeholder="Số kiểm tra, biển số xe, khách hàng...">
                                    </div>
                                    <div class="col-md-3">
                                        <label for="statusFilter">Trạng thái:</label>
                                        <select class="form-control form-control-sm" id="statusFilter">
                                            <option value="">Tất cả</option>
                                            <option value="Pending">Chờ Kiểm Tra</option>
                                            <option value="InProgress">Đang Kiểm Tra</option>
                                            <option value="Completed">Hoàn Thành</option>
                                            <option value="Cancelled">Đã Hủy</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label for="customerFilter">Khách hàng:</label>
                                        <select class="form-control form-control-sm" id="customerFilter">
                                            <option value="">Tất cả khách hàng</option>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <label>&nbsp;</label>
                                        <button type="button" class="btn btn-secondary btn-sm btn-block" id="clearFilters">
                                            <i class="fas fa-times"></i> Xóa Bộ Lọc
                                        </button>
                                    </div>
                                </div>
                                <table id="inspectionTable" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Số Kiểm Tra</th>
                                            <th>Biển Số Xe</th>
                                            <th>Khách Hàng</th>
                                            <th>Kỹ Thuật Viên</th>
                                            <th>Ngày Kiểm Tra</th>
                                            <th>Trạng Thái</th>
                                            <th>Số Km</th>
                                            <th>Tình Trạng</th>
                                            <th>Thao Tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Include Modal Partial Views -->
@await Html.PartialAsync("_CreateVehicleModal")
@await Html.PartialAsync("_EditVehicleModal")
@await Html.PartialAsync("_ViewVehicleModal")

@section Scripts {
    <script src="~/js/vehicle-management.js" asp-append-version="true"></script>
    <script src="~/js/inspection-management.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            // Initialize both modules
            VehicleManagement.init();
            InspectionManagement.init();
        });
    </script>
}
