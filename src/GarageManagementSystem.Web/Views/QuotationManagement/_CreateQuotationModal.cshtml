@section Scripts {
<script>
$(document).ready(function() {
    // Set default ngày hiệu lực (30 ngày từ hôm nay)
    var today = new Date();
    var validUntil = new Date(today);
    validUntil.setDate(today.getDate() + 30);
    
    var validUntilString = validUntil.getFullYear() + '-' + 
                          String(validUntil.getMonth() + 1).padStart(2, '0') + '-' + 
                          String(validUntil.getDate()).padStart(2, '0');
    
    $('#createValidUntil').val(validUntilString);
    
    // Initialize AdminLTE card widgets
    $('[data-card-widget="collapse"]').CardWidget();
});
</script>
}

