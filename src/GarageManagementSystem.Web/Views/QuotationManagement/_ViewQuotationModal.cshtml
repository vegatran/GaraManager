                    <h6 class="text-success font-weight-bold mb-3">
                        <i class="fas fa-calendar-alt mr-2"></i>Thông Tin Ngày Tháng
                    </h6>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label class="font-weight-bold text-muted small">Loại Báo Giá:</label>
                                <p id="viewQuotationType" class="form-control-plaintext mb-0"></p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label class="font-weight-bold text-muted small">Ngày Báo Giá:</label>
                                <p id="viewQuotationDate" class="form-control-plaintext mb-0"></p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-0">
                                <label class="font-weight-bold text-muted small">Hiệu Lực Đến:</label>
                                <p id="viewValidUntil" class="form-control-plaintext mb-0"></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Thông tin mô tả -->
                <div class="mb-4 p-3 border rounded bg-light">
                    <h6 class="text-info font-weight-bold mb-3">
                        <i class="fas fa-file-alt mr-2"></i>Thông Tin Mô Tả
                    </h6>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label class="font-weight-bold text-muted small">Mô Tả:</label>
                                <p id="viewDescription" class="form-control-plaintext mb-0"></p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group mb-0">
                                <label class="font-weight-bold text-muted small">Điều Khoản:</label>
                                <p id="viewTerms" class="form-control-plaintext mb-0"></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h5 class="mb-3">Chi Tiết Dịch Vụ</h5>
                        <div id="viewServiceItems" class="table-responsive">
                            <!-- Service items will be populated here -->
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <table class="table table-sm">
                            <tr>
                                <td class="text-right font-weight-bold">Tạm Tính:</td>
                                <td class="text-right" style="width: 200px;"><span id="viewSubTotal"></span> VNĐ</td>
                            </tr>
                            <tr>
                                <td class="text-right font-weight-bold">Thuế (<span id="viewTaxRate"></span>%):</td>
                                <td class="text-right"><span id="viewTaxAmount"></span> VNĐ</td>
                            </tr>
                            <tr>
                                <td class="text-right font-weight-bold">Giảm Giá:</td>
                                <td class="text-right"><span id="viewDiscountAmount"></span> VNĐ</td>
                            </tr>
                            <tr class="font-weight-bold" style="font-size: 1.1em;">
                                <td class="text-right">Tổng Cộng:</td>
                                <td class="text-right text-primary"><span id="viewTotalAmount"></span> VNĐ</td>
                            </tr>
                        </table>
                    </div>
                </div>
                    </div>

                    <!-- Service Items Tab -->
                    <div class="tab-pane fade" id="service-items" role="tabpanel">
                        <!-- Chi tiết dịch vụ sẽ được thêm ở đây -->
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle mr-2"></i>
                            Chi tiết dịch vụ sẽ được hiển thị ở đây
                        </div>
                    </div>

                    <!-- Attachments Tab -->
                    <div class="tab-pane fade" id="attachments" role="tabpanel">
                        <div class="mb-3">
                            <button type="button" class="btn btn-primary btn-sm" id="uploadAttachmentBtn">
                                <i class="fas fa-upload mr-1"></i>Upload File
                            </button>
                        </div>
                        
                        <!-- File đính kèm -->
                        <div id="attachmentsList">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle mr-2"></i>
                                Chưa có file đính kèm nào
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary btn-sm print-quotation" data-id="" title="In Báo Giá">
                    <i class="fas fa-print"></i> In Báo Giá
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Upload Attachment Modal -->
<div class="modal fade" id="uploadAttachmentModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload File Đính Kèm</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="uploadAttachmentForm" enctype="multipart/form-data">
                    <input type="hidden" id="uploadQuotationId" name="quotationId" />
                    
                    <div class="form-group">
                        <label for="attachmentFile">Chọn File:</label>
                        <input type="file" class="form-control-file form-control-sm" id="attachmentFile" name="file" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png,.xlsx,.xls" required>
                        <small class="form-text text-muted">Hỗ trợ: PDF, DOC, DOCX, JPG, PNG, XLSX (Tối đa 10MB)</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="attachmentType">Loại File:</label>
                        <select class="form-control form-control-sm" id="attachmentType" name="attachmentType">
                            <option value="General">Tổng Quát</option>
                            <option value="InsuranceApproval">Duyệt Bảo Hiểm</option>
                            <option value="CustomerDocument">Tài Liệu Khách Hàng</option>
                            <option value="TechnicalReport">Báo Cáo Kỹ Thuật</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="attachmentDescription">Mô Tả:</label>
                        <textarea class="form-control form-control-sm" id="attachmentDescription" name="description" rows="3" placeholder="Mô tả về file..."></textarea>
                    </div>
                    
                    <div class="form-group">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="isInsuranceDocument" name="isInsuranceDocument">
                            <label class="form-check-label" for="isInsuranceDocument">
                                Đây là tài liệu bảo hiểm
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary btn-sm" id="saveAttachmentBtn">
                    <i class="fas fa-upload mr-1"></i>Upload
                </button>
            </div>
        </div>
    </div>
</div>

