<!-- View Quotation Modal -->
<div class="modal fade" id="viewQuotationModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Chi Tiết Báo Giá</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Tab Navigation -->
                <ul class="nav nav-tabs" id="viewQuotationTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="basic-info-tab" data-toggle="tab" href="#basic-info" role="tab">
                            <i class="fas fa-info-circle mr-1"></i>Thông Tin Cơ Bản
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="service-items-tab" data-toggle="tab" href="#service-items" role="tab">
                            <i class="fas fa-list mr-1"></i>Chi Tiết Dịch Vụ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="attachments-tab" data-toggle="tab" href="#attachments" role="tab">
                            <i class="fas fa-paperclip mr-1"></i>File Đính Kèm
                        </a>
                    </li>
                </ul>

                <!-- Tab Content -->
                <div class="tab-content" id="viewQuotationTabContent">
                    <!-- Basic Info Tab -->
                    <div class="tab-pane fade show active" id="basic-info" role="tabpanel">
                        <!-- Thông tin cơ bản -->
                <div class="mb-4 p-3 border rounded bg-light">
                    <h6 class="text-primary font-weight-bold mb-3">
                        <i class="fas fa-info-circle mr-2"></i>Thông Tin Cơ Bản
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="font-weight-bold text-muted small">Số Báo Giá:</label>
                                <p id="viewQuotationNumber" class="form-control-plaintext font-weight-bold text-dark mb-0"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="font-weight-bold text-muted small">Trạng Thái:</label>
                                <p id="viewStatus" class="form-control-plaintext mb-0"></p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-0">
                                <label class="font-weight-bold text-muted small">Khách Hàng:</label>
                                <p id="viewCustomer" class="form-control-plaintext mb-0"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-0">
                                <label class="font-weight-bold text-muted small">Xe:</label>
                                <p id="viewVehicle" class="form-control-plaintext mb-0"></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Thông tin ngày tháng -->
