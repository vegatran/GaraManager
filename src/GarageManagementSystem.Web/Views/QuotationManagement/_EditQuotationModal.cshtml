<style>
/* ✅ THÊM: Format hiển thị số tiền trong input */
.total-input {
    text-align: right;
    font-weight: bold;
    color: #28a745;
}

/* ✅ THÊM: Format hiển thị số tiền khi focus out */
.total-input:not(:focus) {
    background-color: #f8f9fa;
}

/* ✅ THÊM: Format hiển thị số tiền với comma separator */
.total-input::after {
    content: " VNĐ";
    color: #6c757d;
    font-weight: normal;
}
</style>

<script>
$(document).ready(function() {
    // ✅ THÊM: Format số tiền khi input mất focus
    $(document).on('blur', '.total-input', function() {
        var value = parseFloat($(this).val()) || 0;
        if (value > 0) {
            $(this).val(value.toLocaleString('vi-VN'));
        }
    });
    
    // ✅ THÊM: Clear format khi input được focus
    $(document).on('focus', '.total-input', function() {
        var value = $(this).val().replace(/[^\d]/g, '');
        $(this).val(value);
    });
});
</script>

