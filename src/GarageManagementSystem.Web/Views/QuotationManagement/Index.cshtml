@{
    ViewData["Title"] = "Quản Lý Báo Giá";
}

@Html.AntiForgeryToken()

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản Lý Báo Giá</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Báo Giá</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Danh Sách Báo Giá</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-primary btn-sm" id="addQuotationBtn">
                                <i class="fas fa-plus"></i> Thêm Báo Giá Mới
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="quotationTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Số Báo Giá</th>
                                    <th>Thông Tin Xe</th>
                                    <th>Khách Hàng</th>
                                    <th>Tổng Tiền</th>
                                    <th>Trạng Thái</th>
                                    <th>Có Hiệu Lực Đến</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("_CreateQuotationModal")
@await Html.PartialAsync("_EditQuotationModal")
@await Html.PartialAsync("_ViewQuotationModal")

@section Scripts {
    <style>
        .border-left-primary {
            border-left: 4px solid #007bff !important;
        }
        .border-left-warning {
            border-left: 4px solid #ffc107 !important;
        }
        .border-left-info {
            border-left: 4px solid #17a2b8 !important;
        }
        .nav-tabs .nav-link {
            border-radius: 0.25rem 0.25rem 0 0;
        }
        .nav-tabs .nav-link.active {
            background-color: #f8f9fa;
            border-color: #dee2e6 #dee2e6 #f8f9fa;
        }
    </style>
    <script src="~/js/quotation-management.js" asp-append-version="true"></script>
}

<!-- Include Modals -->
@Html.Partial("_CreateQuotationModal")
@Html.Partial("_EditQuotationModal")
@Html.Partial("_ViewQuotationModal")
@Html.Partial("_InsurancePricingModal")
@Html.Partial("_CorporatePricingModal")