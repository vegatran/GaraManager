@{
    ViewData["Title"] = "Quản Lý Tiếp Đón Khách Hàng";
}

@Html.AntiForgeryToken()

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản Lý Tiếp Đón Khách Hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                    <li class="breadcrumb-item active">Tiếp Đón Khách Hàng</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Danh Sách Phiếu Tiếp Đón</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-primary btn-sm" id="addReceptionBtn">
                                <i class="fas fa-plus"></i> Tiếp Đón Khách Mới
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="receptionTable" class="table table-bordered table-striped dt-responsive nowrap" width="100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Số Phiếu</th>
                                    <th>Khách Hàng</th>
                                    <th>Xe</th>
                                    <th>Thông Tin Xe</th>
                                    <th>Ngày Tiếp Đón</th>
                                    <th>Kỹ Thuật Viên</th>
                                    <th>Trạng Thái</th>
                                    <th>Ưu Tiên</th>
                                    <th>Loại Dịch Vụ</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Include Modal Partial Views -->
@await Html.PartialAsync("_CreateReceptionModal")
@await Html.PartialAsync("_EditReceptionModal")
@await Html.PartialAsync("_ViewReceptionModal")

@section Scripts {
    <script src="~/js/customer-reception-management.js" asp-append-version="true"></script>
}
