@inject IConfiguration Configuration
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Hệ Thống Quản Lý Gara</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="~/lib/adminlte/css/adminlte.min.css">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap4.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-user"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Profile", "Home")" class="dropdown-item">
                                <i class="fas fa-user mr-2"></i> Hồ Sơ
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="@Url.Action("Logout", "Home")" class="dropdown-item">
                                <i class="fas fa-sign-out-alt mr-2"></i> Đăng Xuất
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account")" class="dropdown-item">
                                <i class="fas fa-sign-in-alt mr-2"></i> Đăng Nhập
                            </a>
                        }
                    </div>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index", "Home")" class="brand-link">
                <img src="~/lib/adminlte/img/AdminLTELogo.png" alt="Quản Lý Gara" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Quản Lý Gara</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/lib/adminlte/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @(User.FindFirst("name")?.Value ?? User.Identity.Name)
                            }
                            else
                            {
                                <text>Khách</text>
                            }
                        </a>
                    </div>
                </div>

                @await Html.PartialAsync("_SidebarMenu")
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>Bản Quyền &copy; 2024 <a href="#">Hệ Thống Quản Lý Gara</a>.</strong>
            Đã đăng ký bản quyền.
            <div class="float-right d-none d-sm-inline-block">
                <b>Phiên Bản</b> 1.0.0
            </div>
        </footer>
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/lib/adminlte/js/adminlte.min.js"></script>
    <!-- DataTables -->
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <!-- DataTables Vietnamese Language -->
    <script src="~/js/datatables-vietnamese.js" asp-append-version="true"></script>
    <!-- Select2 -->
    <script src="~/lib/select2/dist/js/select2.min.js"></script>
    <!-- Bootstrap Typeahead -->
    <script src="~/lib/bootstrap-typeahead/bootstrap3-typeahead.min.js"></script>
    <!-- InputMask -->
    <script src="~/lib/inputmask/jquery.inputmask.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <!-- SignalR -->
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <!-- Chart.js -->
    <script src="~/lib/chart.js/dist/chart.umd.min.js"></script>
    <!-- Custom JS - Load utilities first -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/auth-handler.js" asp-append-version="true"></script>
    <script src="~/js/ajax-utility.js" asp-append-version="true"></script>
    <script src="~/js/datatables-utility.js" asp-append-version="true"></script>
    <script src="~/js/modal-select2.js" asp-append-version="true"></script>
    <script src="~/js/setup.js" asp-append-version="true"></script>
    <script src="~/js/excel-import.js" asp-append-version="true"></script>
    <!-- ✅ THÊM: Inventory Alerts Badge -->
    <script src="~/js/inventory-alerts-badge.js" asp-append-version="true"></script>
    <!-- ✅ THÊM: Card Collapse Utility -->
    <script src="~/js/card-collapse-utility.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Dynamic menu activation script -->
    <script>
        // ✅ Real-time: Set API base URL for SignalR connection
        window.apiBaseUrl = '@(Configuration["ApiConfiguration:BaseUrl"]?.Replace("/api/", "") ?? "https://localhost:5001")';
        
        $(document).ready(function() {
            // Don't clear active classes - let Razor handle it
            // The server-side logic in _SidebarMenu.cshtml already sets the correct active state
            
            // ✅ THÊM: Load và update inventory alerts badge count
            if (typeof InventoryAlertsBadge !== 'undefined') {
                InventoryAlertsBadge.init();
            }
        });
    </script>
</body>
</html>