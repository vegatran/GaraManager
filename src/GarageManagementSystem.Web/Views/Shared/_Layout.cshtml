<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Hệ Thống Quản Lý Gara</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="~/lib/adminlte/css/adminlte.min.css">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap4.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-user"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Profile", "Home")" class="dropdown-item">
                                <i class="fas fa-user mr-2"></i> Hồ Sơ
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="@Url.Action("Logout", "Home")" class="dropdown-item">
                                <i class="fas fa-sign-out-alt mr-2"></i> Đăng Xuất
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account")" class="dropdown-item">
                                <i class="fas fa-sign-in-alt mr-2"></i> Đăng Nhập
                            </a>
                        }
                    </div>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index", "Home")" class="brand-link">
                <img src="~/lib/adminlte/img/AdminLTELogo.png" alt="Quản Lý Gara" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Quản Lý Gara</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/lib/adminlte/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @(User.FindFirst("name")?.Value ?? User.Identity.Name)
                            }
                            else
                            {
                                <text>Khách</text>
                            }
                        </a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        
                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Home")" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt text-info"></i>
                                <p>Tổng Quan</p>
                            </a>
                        </li>

                        <!-- OPERATIONS -->
                        <li class="nav-header">VẬN HÀNH</li>

                        <!-- Appointments -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "AppointmentManagement")" class="nav-link">
                                <i class="nav-icon far fa-calendar-check text-primary"></i>
                                <p>Lịch Hẹn</p>
                            </a>
                        </li>

                        <!-- Vehicle Inspections -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "InspectionManagement")" class="nav-link">
                                <i class="nav-icon fas fa-clipboard-check text-warning"></i>
                                <p>Kiểm Tra Xe</p>
                            </a>
                        </li>

                        <!-- Service Quotations -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "QuotationManagement")" class="nav-link">
                                <i class="nav-icon fas fa-file-invoice-dollar text-success"></i>
                                <p>Báo Giá</p>
                            </a>
                        </li>

                        <!-- Service Orders -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "OrderManagement")" class="nav-link">
                                <i class="nav-icon fas fa-clipboard-list text-primary"></i>
                                <p>Phiếu Sửa Chữa</p>
                            </a>
                        </li>

                        <!-- BUSINESS -->
                        <li class="nav-header">KINH DOANH</li>

                        <!-- Customers -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "CustomerManagement")" class="nav-link">
                                <i class="nav-icon fas fa-users text-info"></i>
                                <p>Khách Hàng</p>
                            </a>
                        </li>

                        <!-- Vehicles -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "VehicleManagement")" class="nav-link">
                                <i class="nav-icon fas fa-car text-secondary"></i>
                                <p>Xe</p>
                            </a>
                        </li>

                        <!-- Employees -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "EmployeeManagement")" class="nav-link">
                                <i class="nav-icon fas fa-user-tie text-primary"></i>
                                <p>Nhân Viên</p>
                            </a>
                        </li>

                        <!-- INVENTORY -->
                        <li class="nav-header">KHO</li>

                        <!-- Parts Management -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "PartsManagement")" class="nav-link">
                                <i class="nav-icon fas fa-boxes text-warning"></i>
                                <p>Phụ Tùng</p>
                            </a>
                        </li>

                        <!-- Suppliers -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "SupplierManagement")" class="nav-link">
                                <i class="nav-icon fas fa-truck text-info"></i>
                                <p>Nhà Cung Cấp</p>
                            </a>
                        </li>

                        <!-- Stock Transactions -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "StockManagement")" class="nav-link">
                                <i class="nav-icon fas fa-exchange-alt text-secondary"></i>
                                <p>Nhập Xuất Kho</p>
                            </a>
                        </li>

                        <!-- FINANCE -->
                        <li class="nav-header">TÀI CHÍNH</li>

                        <!-- Insurance Invoices -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "InsuranceInvoice")" class="nav-link">
                                <i class="nav-icon fas fa-file-invoice text-info"></i>
                                <p>Hóa Đơn Bảo Hiểm</p>
                            </a>
                        </li>

                        <!-- Payments -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "PaymentManagement")" class="nav-link">
                                <i class="nav-icon fas fa-money-bill-wave text-success"></i>
                                <p>Thanh Toán</p>
                            </a>
                        </li>

                        <!-- MASTER DATA -->
                        <li class="nav-header">DANH MỤC</li>

                        <!-- Services -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "ServiceManagement")" class="nav-link">
                                <i class="nav-icon fas fa-tools text-danger"></i>
                                <p>Dịch Vụ</p>
                            </a>
                        </li>

                        <!-- REPORTS -->
                        <li class="nav-header">BÁO CÁO</li>

                        <!-- Reports Menu -->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-chart-bar text-success"></i>
                                <p>
                                    Báo Cáo
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Báo Cáo Doanh Thu</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Báo Cáo Dịch Vụ</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Báo Cáo Tồn Kho</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Báo Cáo Khách Hàng</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- SYSTEM -->
                        <li class="nav-header">HỆ THỐNG</li>

                        <!-- Setup -->
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Setup")" class="nav-link">
                                <i class="nav-icon fas fa-database text-warning"></i>
                                <p>Setup Dữ Liệu</p>
                            </a>
                        </li>

                        <!-- Settings -->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-cog text-secondary"></i>
                                <p>
                                    Cài Đặt
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Profile", "Home")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Hồ Sơ</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("TestApi", "Home")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Kiểm Tra API</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>Bản Quyền &copy; 2024 <a href="#">Hệ Thống Quản Lý Gara</a>.</strong>
            Đã đăng ký bản quyền.
            <div class="float-right d-none d-sm-inline-block">
                <b>Phiên Bản</b> 1.0.0
            </div>
        </footer>
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/lib/adminlte/js/adminlte.min.js"></script>
    <!-- DataTables -->
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <!-- DataTables Vietnamese Language -->
    <script src="~/js/datatables-vietnamese.js" asp-append-version="true"></script>
    <!-- Select2 -->
    <script src="~/lib/select2/dist/js/select2.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <!-- Chart.js -->
    <script src="~/lib/chart.js/dist/chart.umd.min.js"></script>
    <!-- Custom JS - Load utilities first -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/auth-handler.js" asp-append-version="true"></script>
    <script src="~/js/ajax-utility.js" asp-append-version="true"></script>
    <script src="~/js/datatables-utility.js" asp-append-version="true"></script>
    <script src="~/js/modal-select2.js" asp-append-version="true"></script>
    <script src="~/js/setup.js" asp-append-version="true"></script>
    <script src="~/js/excel-import.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Dynamic menu activation script -->
    <script>
        $(document).ready(function() {
            // Get current path
            var path = window.location.pathname;
            
            // Remove active class from all nav links
            $('.nav-link').removeClass('active');
            
            // Add active class to current nav link
            $('.nav-link').each(function() {
                var href = $(this).attr('href');
                if (href && path.includes(href.replace('@Url.Action("', '').replace('", "Home")', ''))) {
                    $(this).addClass('active');
                    $(this).closest('.nav-item').addClass('menu-open');
                }
            });
        });
    </script>
</body>
</html>