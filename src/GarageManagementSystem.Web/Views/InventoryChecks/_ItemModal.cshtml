<!-- Modal Add/Edit Item -->
<div class="modal fade" id="itemModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title" id="itemModalTitle">Thêm Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="itemForm">
                <div class="modal-body">
                    <input type="hidden" id="itemId" />
                    <input type="hidden" id="itemInventoryCheckId" />
                    <input type="hidden" id="itemPartId" />

                    <!-- Part Selection -->
                    <div class="form-group">
                        <label for="itemPartSearch">Phụ Tùng <span class="text-danger">*</span></label>
                        <input type="text" class="form-control form-control-sm" id="itemPartSearch" placeholder="Tìm kiếm phụ tùng..." autocomplete="off" required>
                        <small class="form-text text-muted">Nhập tên hoặc mã phụ tùng để tìm kiếm</small>
                    </div>

                    <!-- Part Info Display -->
                    <div id="itemPartInfo" class="alert alert-info" style="display: none;">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Mã:</strong> <span id="itemPartNumber">-</span><br>
                                <strong>Tên:</strong> <span id="itemPartName">-</span>
                            </div>
                            <div class="col-md-6">
                                <strong>SKU:</strong> <span id="itemPartSku">-</span><br>
                                <strong>Tồn Kho:</strong> <span id="itemPartStock">-</span>
                            </div>
                        </div>
                    </div>

                    <!-- System Quantity (Read-only) -->
                    <div class="form-group">
                        <label for="itemSystemQuantity">Số Lượng Hệ Thống</label>
                        <input type="number" class="form-control form-control-sm" id="itemSystemQuantity" readonly>
                        <small class="form-text text-muted">Số lượng trong hệ thống (tự động lấy từ tồn kho)</small>
                    </div>

                    <!-- Actual Quantity -->
                    <div class="form-group">
                        <label for="itemActualQuantity">Số Lượng Thực Tế <span class="text-danger">*</span></label>
                        <input type="number" class="form-control form-control-sm" id="itemActualQuantity" min="0" required>
                        <small class="form-text text-muted">Số lượng thực tế khi kiểm kê</small>
                    </div>

                    <!-- Discrepancy Quantity (Read-only, auto-calculated) -->
                    <div class="form-group">
                        <label for="itemDiscrepancyQuantity">Chênh Lệch</label>
                        <input type="number" class="form-control form-control-sm" id="itemDiscrepancyQuantity" readonly>
                        <small class="form-text text-muted">Chênh lệch = Thực tế - Hệ thống (tự động tính)</small>
                    </div>

                    <!-- Notes -->
                    <div class="form-group">
                        <label for="itemNotes">Ghi Chú</label>
                        <textarea class="form-control form-control-sm" id="itemNotes" rows="3" placeholder="Nhập ghi chú (nếu có)"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary btn-sm">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

