@{
    ViewData["Title"] = "Quản Lý Kiểm Kê Định Kỳ";
}

@Html.AntiForgeryToken()

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản Lý Kiểm Kê Định Kỳ</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                    <li class="breadcrumb-item active">Kiểm Kê Định Kỳ</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Danh Sách Phiếu Kiểm Kê</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-success btn-sm mr-2" id="exportExcelBtn">
                                <i class="fas fa-file-excel"></i> Xuất Excel
                            </button>
                            <button type="button" class="btn btn-primary btn-sm" id="createCheckBtn">
                                <i class="fas fa-plus"></i> Tạo Phiếu Kiểm Kê Mới
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Filters -->
                        <div class="row mb-3">
                            <div class="col-md-2">
                                <select id="filterStatus" class="form-control form-control-sm">
                                    <option value="">Tất cả trạng thái</option>
                                    <option value="Draft">Nháp</option>
                                    <option value="InProgress">Đang thực hiện</option>
                                    <option value="Completed">Hoàn thành</option>
                                    <option value="Cancelled">Đã hủy</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select id="filterWarehouse" class="form-control form-control-sm">
                                    <option value="">Tất cả kho</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <input type="date" id="filterStartDate" class="form-control form-control-sm" placeholder="Từ ngày">
                            </div>
                            <div class="col-md-2">
                                <input type="date" id="filterEndDate" class="form-control form-control-sm" placeholder="Đến ngày">
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-info btn-sm btn-block" id="applyFiltersBtn">
                                    <i class="fas fa-filter"></i> Lọc
                                </button>
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-secondary btn-sm btn-block" id="clearFiltersBtn">
                                    <i class="fas fa-times"></i> Xóa bộ lọc
                                </button>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table id="inventoryChecksTable" class="table table-bordered table-striped dt-responsive nowrap" width="100%">
                                <thead>
                                    <tr>
                                        <th>Mã Phiếu</th>
                                        <th>Tên Phiếu</th>
                                        <th>Ngày Kiểm Kê</th>
                                        <th>Kho</th>
                                        <th>Khu Vực</th>
                                        <th>Kệ/Ngăn</th>
                                        <th>Trạng Thái</th>
                                        <th>Số Items</th>
                                        <th>Người Thực Hiện</th>
                                        <th>Thao Tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("_CreateModal")
@await Html.PartialAsync("_EditModal")
@await Html.PartialAsync("_ViewModal")
@await Html.PartialAsync("_ItemModal")
@await Html.PartialAsync("~/Views/InventoryAdjustments/_CreateFromCheckModal.cshtml")

@section Scripts {
    <script src="~/js/inventory-checks.js" asp-append-version="true"></script>
    <script src="~/js/inventory-adjustments.js" asp-append-version="true"></script>
}

