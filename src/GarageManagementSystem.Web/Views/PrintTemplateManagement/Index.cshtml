@{
    ViewData["Title"] = "Quản Lý Mẫu In";
}

@Html.AntiForgeryToken()

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản Lý Mẫu In</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                    <li class="breadcrumb-item active">Mẫu In</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Danh Sách Mẫu In</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-success btn-sm mr-2" data-toggle="modal" data-target="#createTemplateModal">
                                <i class="fas fa-plus"></i> Thêm Mẫu In
                            </button>
                            <button type="button" class="btn btn-primary btn-sm" id="createDefaultQuotationBtn">
                                <i class="fas fa-star"></i> Tạo Mẫu Mặc Định Báo Giá
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="templateTable" class="table table-bordered table-striped dt-responsive nowrap" width="100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên Mẫu</th>
                                    <th>Loại</th>
                                    <th>Mô Tả</th>
                                    <th>Trạng Thái</th>
                                    <th>Mặc Định</th>
                                    <th>Ngày Tạo</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Data sẽ được load qua AJAX -->
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("_CreateTemplateModal")
@await Html.PartialAsync("_EditTemplateModal")
@await Html.PartialAsync("_ViewTemplateModal")

@section Scripts {
    <script src="~/js/print-template-management.js" asp-append-version="true"></script>
}

<style>
    /* DataTables CSS inline để tránh lỗi section */
    table.dataTable {
        border-collapse: collapse !important;
        border-spacing: 0 !important;
    }
    .dataTables_wrapper .dataTables_length, .dataTables_wrapper .dataTables_filter, .dataTables_wrapper .dataTables_info, .dataTables_wrapper .dataTables_processing, .dataTables_wrapper .dataTables_paginate {
        color: #333;
    }
    .dataTables_wrapper .dataTables_paginate {
        float: right;
        text-align: right;
        padding-top: 0.25em;
    }
</style>