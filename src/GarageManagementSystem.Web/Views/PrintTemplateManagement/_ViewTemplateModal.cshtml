<!-- Modal View Template -->
<div class="modal fade" id="viewTemplateModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="viewTemplateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewTemplateModalLabel">Xem Mẫu In</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-header">
                        <h4 id="viewTemplateName"></h4>
                        <span class="badge badge-info" id="viewTemplateType"></span>
                        <span class="badge badge-success" id="viewTemplateStatus"></span>
                        <span class="badge badge-warning" id="viewTemplateDefault"></span>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Mô Tả:</strong>
                                <p id="viewDescription"></p>
                            </div>
                            <div class="col-md-6">
                                <strong>Ngày Tạo:</strong>
                                <p id="viewCreatedAt"></p>
                            </div>
                        </div>
                        
                        <hr>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Thông Tin Công Ty</h5>
                                <div id="viewCompanyInfo"></div>
                            </div>
                            <div class="col-md-6">
                                <h5>Preview</h5>
                                <div id="viewPreview" class="border p-3" style="background: white; min-height: 200px;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
