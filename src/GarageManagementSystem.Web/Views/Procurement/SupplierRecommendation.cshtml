@{
    ViewData["Title"] = "Đề Xuất Nhà Cung Cấp";
}

@Html.AntiForgeryToken()

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Đề Xuất Nhà Cung Cấp</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("DemandAnalysis", "Procurement")">Mua Hàng</a></li>
                    <li class="breadcrumb-item active">Đề Xuất Nhà Cung Cấp</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Search Form -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Tìm Kiếm Phụ Tùng</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Phụ Tùng <span class="text-danger">*</span></label>
                                    <select id="partSelect" class="form-control form-control-sm select2" style="width: 100%;" required>
                                        <option value="">-- Chọn phụ tùng --</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Số Lượng <span class="text-danger">*</span></label>
                                    <input type="number" id="quantityInput" class="form-control form-control-sm" value="1" min="1" required />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <button type="button" class="btn btn-primary btn-sm btn-block" id="btnGetRecommendation">
                                        <i class="fas fa-star"></i> Lấy Đề Xuất
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <button type="button" class="btn btn-info btn-sm btn-block" id="btnViewComparison">
                                        <i class="fas fa-list"></i> So Sánh Tất Cả
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recommendation Results -->
        <div class="row" id="recommendationResults" style="display: none;">
            <div class="col-12">
                <!-- Recommended Supplier Card -->
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-star"></i> Nhà Cung Cấp Được Đề Xuất
                        </h3>
                    </div>
                    <div class="card-body">
                        <div id="recommendedSupplierInfo">
                            <div class="row">
                                <div class="col-md-8">
                                    <h4 id="recommendedSupplierName" class="mb-3"></h4>
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <p><strong>Mã NCC:</strong> <span id="recommendedSupplierCode"></span></p>
                                            <p><strong>Liên Hệ:</strong> <span id="recommendedContact"></span></p>
                                            <p><strong>Email:</strong> <span id="recommendedEmail"></span></p>
                                            <p><strong>Điện Thoại:</strong> <span id="recommendedPhone"></span></p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Giá Đơn Vị:</strong> <span id="recommendedUnitPrice" class="text-success font-weight-bold"></span></p>
                                            <p><strong>Tổng Giá:</strong> <span id="recommendedTotalPrice" class="text-success font-weight-bold"></span></p>
                                            <p><strong>Thời Gian Giao:</strong> <span id="recommendedLeadTime"></span> ngày</p>
                                            <p><strong>Điểm Tổng Thể:</strong> <span id="recommendedScore" class="badge badge-success"></span></p>
                                        </div>
                                    </div>
                                    <div class="alert alert-info">
                                        <strong>Lý Do Đề Xuất:</strong> <span id="recommendationReason"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 text-center">
                                    <div class="mb-3">
                                        <h5>Đánh Giá</h5>
                                        <div id="recommendedRating" class="mb-2"></div>
                                        <small class="text-muted">(<span id="recommendedRatingCount"></span> đánh giá)</small>
                                    </div>
                                    <div class="mb-3">
                                        <h5>Hiệu Suất</h5>
                                        <p class="mb-1">Giao Hàng Đúng Hạn: <span id="recommendedOnTime" class="badge badge-success"></span></p>
                                        <p class="mb-0">Tỷ Lệ Lỗi: <span id="recommendedDefectRate" class="badge badge-warning"></span></p>
                                    </div>
                                    <button type="button" class="btn btn-success btn-lg btn-block" id="btnCreatePOFromRecommendation">
                                        <i class="fas fa-shopping-cart"></i> Tạo PO
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- All Suppliers Comparison -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">So Sánh Với Tất Cả Nhà Cung Cấp</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="allSuppliersTable" class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Nhà Cung Cấp</th>
                                        <th>Giá Đơn Vị</th>
                                        <th>Tổng Giá</th>
                                        <th>Chênh Lệch Giá</th>
                                        <th>Đánh Giá</th>
                                        <th>Điểm Tổng Thể</th>
                                        <th>Thao Tác</th>
                                    </tr>
                                </thead>
                                <tbody id="allSuppliersTableBody">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/supplier-recommendation.js" asp-append-version="true"></script>
}

