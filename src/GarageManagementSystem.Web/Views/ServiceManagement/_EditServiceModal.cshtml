<!-- Edit Service Modal -->
<div class="modal fade" id="editServiceModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h4 class="modal-title">Sửa Thông Tin Dịch Vụ</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="editServiceForm">
                <div class="modal-body">
                    <input type="hidden" id="editId" name="Id">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editServiceName">Tên Dịch Vụ <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-sm" id="editServiceName" name="ServiceName" required maxlength="200">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editServiceCode">Mã Dịch Vụ <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-sm" id="editServiceCode" name="ServiceCode" required maxlength="50">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editPrice">Giá (VNĐ) <span class="text-danger">*</span></label>
                                <input type="number" class="form-control form-control-sm" id="editPrice" name="Price" required min="0" step="1000">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editDuration">Thời Gian (phút)</label>
                                <input type="number" class="form-control form-control-sm" id="editDuration" name="Duration" min="0">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editCategory">Danh Mục</label>
                                <select class="form-control form-control-sm" id="editCategory" name="Category">
                                    <option value="">-- Chọn Danh Mục --</option>
                                    <option value="Maintenance">Bảo Dưỡng</option>
                                    <option value="Repair">Sửa Chữa</option>
                                    <option value="Inspection">Kiểm Tra</option>
                                    <option value="Body Work">Sửa Chữa Thân Vỏ</option>
                                    <option value="Parts">Phụ Tùng</option>
                                    <option value="Other">Khác</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="editDescription">Mô Tả</label>
                        <textarea class="form-control form-control-sm" id="editDescription" name="Description" rows="3" maxlength="1000"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                        <i class="fas fa-times"></i> Đóng
                    </button>
                    <button type="submit" class="btn btn-warning btn-sm">
                        <i class="fas fa-save"></i> Cập Nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
