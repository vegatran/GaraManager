<!-- Edit Appointment Modal -->
<div class="modal fade modal-with-select2" id="editAppointmentModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h4 class="modal-title">Sửa Thông Tin Lịch Hẹn</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="editAppointmentForm">
                <div class="modal-body">
                    <input type="hidden" id="editId" name="Id">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editCustomerId">Khách Hàng <span class="text-danger">*</span></label>
                                <select class="form-control form-control-sm select2" id="editCustomerId" name="CustomerId" required style="width: 100%;">
                                    <option value="">-- Chọn Khách Hàng --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editVehicleId">Xe <span class="text-danger">*</span></label>
                                <select class="form-control form-control-sm select2" id="editVehicleId" name="VehicleId" required style="width: 100%;">
                                    <option value="">-- Chọn Xe --</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editAppointmentDate">Ngày Hẹn <span class="text-danger">*</span></label>
                                <input type="date" class="form-control form-control-sm" id="editAppointmentDate" name="AppointmentDate" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editAppointmentTime">Giờ Hẹn <span class="text-danger">*</span></label>
                                <input type="time" class="form-control form-control-sm" id="editAppointmentTime" name="AppointmentTime" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editServiceType">Loại Dịch Vụ <span class="text-danger">*</span></label>
                                <select class="form-control form-control-sm" id="editServiceType" name="ServiceType" required>
                                    <option value="">-- Chọn Loại Dịch Vụ --</option>
                                    <option value="Maintenance">Bảo Dưỡng</option>
                                    <option value="Repair">Sửa Chữa</option>
                                    <option value="Inspection">Kiểm Tra</option>
                                    <option value="Oil Change">Thay Dầu</option>
                                    <option value="Other">Khác</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editAssignedEmployeeId">Nhân Viên Phụ Trách</label>
                                <select class="form-control form-control-sm select2" id="editAssignedEmployeeId" name="AssignedEmployeeId" style="width: 100%;">
                                    <option value="">-- Chọn Nhân Viên --</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editStatus">Trạng Thái</label>
                                <select class="form-control form-control-sm" id="editStatus" name="Status">
                                    <option value="Scheduled">Đã Lên Lịch</option>
                                    <option value="Confirmed">Đã Xác Nhận</option>
                                    <option value="In Progress">Đang Xử Lý</option>
                                    <option value="Completed">Hoàn Thành</option>
                                    <option value="Cancelled">Đã Hủy</option>
                                    <option value="No Show">Không Đến</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="editDescription">Mô Tả</label>
                        <textarea class="form-control form-control-sm" id="editDescription" name="Description" rows="3" maxlength="1000"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                        <i class="fas fa-times"></i> Đóng
                    </button>
                    <button type="submit" class="btn btn-warning btn-sm">
                        <i class="fas fa-save"></i> Cập Nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>